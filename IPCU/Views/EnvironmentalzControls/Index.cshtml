@model IEnumerable<IPCU.Models.EnvironmentalzControl>

@{
    ViewData["Title"] = "Environmental Control Monitoring";
}

<h2 class="mb-4">Environmental Control Monitoring</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AreaOrUnit)</th>
            <th>@Html.DisplayNameFor(model => model.DateAndTimeOfMonitoring)</th>
            <th>@Html.DisplayNameFor(model => model.AssessedBy)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AreaOrUnit)</td>
                <td>@item.DateAndTimeOfMonitoring.ToString("MMM dd, yyyy - hh:mm tt")</td>
                <td>@Html.DisplayFor(modelItem => item.AssessedBy)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
