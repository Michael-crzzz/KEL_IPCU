@{
    ViewBag.Title = "Station List";
    var stations = ViewBag.Data as List<Dictionary<string, object>>;
}
@if (ViewBag.TotalRooms != null)
{
    <div class="container mt-4 mb-4">
        <!-- Added mt-4 -->
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card text-center shadow-sm border-0 rounded-3">
                    <div class="card-header bg-primary text-white">
                        <i class="fas fa-bed me-2"></i>Total Rooms
                    </div>
                    <div class="card-body">
                        <h3 class="fw-bold">@ViewBag.TotalRooms</h3>
                        <p class="text-muted mb-0">All rooms across all stations</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center shadow-sm border-0 rounded-3">
                    <div class="card-header bg-danger text-white">
                        <i class="fas fa-user-injured me-2"></i>Occupied
                    </div>
                    <div class="card-body">
                        <h3 class="fw-bold">@ViewBag.OccupiedCount</h3>
                        <p class="text-muted mb-0">Rooms currently in use</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center shadow-sm border-0 rounded-3">
                    <div class="card-header bg-success text-white">
                        <i class="fas fa-bed me-2"></i>Not Occupied
                    </div>
                    <div class="card-body">
                        <h3 class="fw-bold">@ViewBag.NotOccupiedCount</h3>
                        <p class="text-muted mb-0">Available for assignment</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Station List</h4>
            <i class="fas fa-hospital-alt fa-lg"></i>
        </div>
        <div class="card-body">
            @if (stations != null && stations.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Station ID</th>
                                <th scope="col">Station</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in stations)
                            {
                                <tr>
                                    <td>@row["StationID"]</td>
                                    <td>@row["Station"]</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("ViewRooms", new { stationId = row["StationID"], station = row["Station"] })" class="btn btn-outline-info btn-sm me-2">
                                            <i class="fas fa-door-open me-1"></i> View Rooms
                                        </a>
                                        <a href="@Url.Action("Index", "EnvironmentalzControls", new { stationId = row["StationID"], station = row["Station"] })" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-clipboard-check me-1"></i> Environmental Checklist
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> No data found.
                </div>
            }
        </div>
    </div>
</div>
