@model IPCU.Models.PostTestNonClinical

<form asp-controller="PostTestNonClinical" asp-action="SubmitQuiz" method="post">

    <div>
        <label>Full Name:</label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div>
        <label>Employee ID:</label>
        <input asp-for="EmployeeId" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div>
        <label>Age Group:</label>
        <select asp-for="AgeGroup">
            <option value="">Select</option>
            <option value="18-25">18-25</option>
            <option value="26-35">26-35</option>
            <option value="36-45">36-45</option>
            <option value="46+">46+</option>
        </select>
        <span asp-validation-for="AgeGroup" class="text-danger"></span>
    </div>

    <div>
        <label>Sex:</label>
        <select asp-for="Sex">
            <option value="">Select</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>

    <div>
        <label>PWD:</label>
        <select asp-for="PWD">
            <option value="">Select</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="PWD" class="text-danger"></span>
    </div>

    <div>
        <label>Civil Status:</label>
        <select asp-for="CivilStatus">
            <option value="">Select</option>
            <option value="Single">Single</option>
            <option value="Married">Married</option>
            <option value="Divorced">Divorced</option>
            <option value="Widowed">Widowed</option>
        </select>
        <span asp-validation-for="CivilStatus" class="text-danger"></span>
    </div>

    <div>
        <label>Department:</label>
        <input asp-for="Department" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div>
        <label>Question 1:</label>
        <input type="radio" name="selectedAnswers[0]" value="0" required /> Option 1
        <input type="radio" name="selectedAnswers[0]" value="1" /> Option 2
    </div>

    <div>
        <label>Question 2:</label>
        <input type="radio" name="selectedAnswers[1]" value="0" required /> Option 1
        <input type="radio" name="selectedAnswers[1]" value="1" /> Option 2
    </div>

    <div>
        <label>Question 3:</label>
        <input type="radio" name="selectedAnswers[2]" value="0" required /> Option 1
        <input type="radio" name="selectedAnswers[2]" value="1" /> Option 2
    </div>

    <button type="submit">Submit Quiz</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
