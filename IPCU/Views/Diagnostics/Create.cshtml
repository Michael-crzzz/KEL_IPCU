@model IPCU.Models.Diagnostics
@{
    ViewData["Title"] = "Add Diagnostic";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Add Diagnostic Record</h4>
                        <span class="badge bg-light text-dark">Patient: @ViewBag.PatientName</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="HospNum" value="@ViewBag.HospNum" />

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DateCollection" class="form-control" type="date" id="dateCollection" />
                                    <label asp-for="DateCollection" for="dateCollection">Date Collected</label>
                                    <span asp-validation-for="DateCollection" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="SourceSite" class="form-control" id="sourceSite" placeholder="e.g., Blood, Urine, Sputum" />
                                    <label asp-for="SourceSite" for="sourceSite">Source Site</label>
                                    <span asp-validation-for="SourceSite" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="IsolateFindingsResult" class="form-control" id="isolateFindings" style="height: 150px;" placeholder="Enter findings"></textarea>
                            <label asp-for="IsolateFindingsResult" for="isolateFindings">Isolate Findings</label>
                            <span asp-validation-for="IsolateFindingsResult" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-hospNum="@ViewBag.HospNum" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save and Add Antibiotics
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <div class="small text-muted">
                        <i class="bi bi-info-circle"></i>
                        After saving this form, you'll be able to add antibiotic treatments.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Set default date to today if it's a new record
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('dateCollection');
            if (dateInput && !dateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateInput.value = today;
            }
        });
    </script>
}