@model IPCU.Models.Diagnostics

@{
    ViewData["Title"] = "Create Diagnostic";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 bg-white shadow">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary rounded-circle p-3 me-3">
                            <i class="fas fa-plus text-white"></i>
                        </div>
                        <div>
                            <h1 class="h3 mb-1 fw-bold">Create New Diagnostic</h1>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-injured text-secondary me-2"></i>
                                <span class="fs-5">@ViewBag.PatientName</span>
                                <div class="border-start ms-3 ps-3">
                                    <span class="text-muted">Hospital #:</span>
                                    <span class="fw-bold text-primary">@ViewBag.HospNum</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ExceptionMessage))
        {
            <div class="alert alert-info">
                <strong>Technical details:</strong> @ViewBag.ExceptionMessage
            </div>
        }
    }

    @if (ViewBag.ModelStateErrors != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Please correct the following errors:
            <ul>
                <li>@ViewBag.ModelStateErrors</li>
            </ul>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Diagnostic Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Hidden field to ensure HospNum is submitted -->
                <input type="hidden" asp-for="HospNum" value="@ViewBag.HospNum" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DateCollection" class="control-label">Collection Date</label>
                            <input asp-for="DateCollection" class="form-control" type="date" />
                            <span asp-validation-for="DateCollection" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SourceSite" class="control-label">Source Site</label>
                            <input asp-for="SourceSite" class="form-control" />
                            <span asp-validation-for="SourceSite" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="IsolateFindingsResult" class="control-label">Isolate Findings Result</label>
                    <textarea asp-for="IsolateFindingsResult" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="IsolateFindingsResult" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between">
                    <a asp-action="Index" asp-route-hospNum="@ViewBag.HospNum" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    <div>
                        <button type="submit" name="action" value="BackToIndex" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Save
                        </button>
                        <button type="submit" name="action" value="AddAntibiotics" class="btn btn-success">
                            <i class="fas fa-pills me-1"></i> Save and Add Antibiotics
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Set today's date as default if not already set
            if (!$("#DateCollection").val()) {
                var today = new Date();
                var dd = String(today.getDate()).padStart(2, '0');
                var mm = String(today.getMonth() + 1).padStart(2, '0');
                var yyyy = today.getFullYear();

                today = yyyy + '-' + mm + '-' + dd;
                $("#DateCollection").val(today);
            }

            // Form validation
            $("form").on("submit", function(e) {
                // Check if HospNum is present
                if (!$("#HospNum").val()) {
                    e.preventDefault();
                    alert("Error: Hospital number is missing. Cannot save diagnostic.");
                    return false;
                }

                return true;
            });

            // Log the HospNum value for debugging
            console.log("HospNum value:", $("#HospNum").val());
        });
    </script>
}