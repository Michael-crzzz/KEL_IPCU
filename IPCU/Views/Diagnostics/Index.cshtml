@model IEnumerable<IPCU.Models.Diagnostics>
@{
    ViewData["Title"] = "Patient Diagnostics";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 bg-white shadow">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary rounded-circle p-3 me-3">
                                    <i class="fas fa-stethoscope text-white"></i>
                                </div>
                                <div>
                                    <h1 class="h3 mb-1 fw-bold">Patient Diagnostics</h1>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-injured text-secondary me-2"></i>
                                        <span class="fs-5">@ViewBag.PatientName</span>
                                        <div class="border-start ms-3 ps-3">
                                            <span class="text-muted">Hospital #:</span>
                                            <span class="fw-bold text-primary">@ViewBag.HospNum</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <a asp-action="Create" asp-route-hospNum="@ViewBag.HospNum" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>New Diagnostic
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Diagnostics Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-flask me-2"></i>Diagnostic Records
            </h6>
            <span class="badge bg-primary rounded-pill">@Model.Count() Records</span>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="diagnosticsTable" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="far fa-calendar-alt me-1"></i>Collection Date</th>
                                <th><i class="fas fa-map-marker-alt me-1"></i>Source Site</th>
                                <th><i class="fas fa-microscope me-1"></i>Isolate Findings</th>
                                <th><i class="fas fa-pills me-1"></i>Treatment</th>
                                <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(d => d.DateCollection))
                            {
                                <tr>
                                    <td class="align-middle">
                                        <span class="badge bg-light text-dark p-2">
                                            @(item.DateCollection?.ToString("MMM dd, yyyy"))
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        @if (!string.IsNullOrEmpty(item.SourceSite))
                                        {
                                            <span class="badge bg-info text-white">@item.SourceSite</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted"><i>Not specified</i></span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        @if (!string.IsNullOrEmpty(item.IsolateFindingsResult))
                                        {
                                            @if (item.IsolateFindingsResult.Length > 80)
                                            {
                                                <span data-bs-toggle="tooltip" title="@item.IsolateFindingsResult">
                                                    @(item.IsolateFindingsResult.Substring(0, 80) + "...")
                                                </span>
                                            }
                                            else
                                            {
                                                @item.IsolateFindingsResult
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted"><i>No findings recorded</i></span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        @if (item.Treatments != null && item.Treatments.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var treatment in item.Treatments.Take(3))
                                                {
                                                    <span class="badge bg-success">@treatment.Antibiotic.Name</span>
                                                }
                                                @if (item.Treatments.Count() > 3)
                                                {
                                                    <span class="badge bg-secondary"
                                                          data-bs-toggle="tooltip"
                                                          title="@string.Join(", ", item.Treatments.Skip(3).Select(t => t.Antibiotic.Name))">
                                                        +@(item.Treatments.Count() - 3) more
                                                    </span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">No treatments</span>
                                        }
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.DiagId" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                            <a asp-action="AddAntibiotics" asp-route-id="@item.DiagId" class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-pills me-1"></i> Add
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-id="@item.DiagId"
                                                    data-date="@(item.DateCollection?.ToString("MMM dd, yyyy"))">
                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <img src="/img/empty-state.svg" alt="No Records" class="img-fluid mb-3" style="max-width: 200px;">
                    <h5 class="text-muted">No diagnostic records found</h5>
                    <p class="text-muted mb-4">This patient doesn't have any diagnostic records yet.</p>
                    <a asp-action="Create" asp-route-hospNum="@ViewBag.HospNum" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Add First Diagnostic</span>
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Navigation Footer -->
    <div class="d-flex justify-content-between mb-4">
        <a asp-controller="ICNPatient" asp-action="Details" asp-route-id="@ViewBag.HospNum" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back to Patient</span>
        </a>

        <a asp-controller="Reports" asp-action="PatientDiagnostics" asp-route-hospNum="@ViewBag.HospNum" class="btn btn-info btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-file-alt"></i>
            </span>
            <span class="text">Generate Report</span>
        </a>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Confirmation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the diagnostic record from <strong id="deleteDate"></strong>?</p>
                <p class="mb-0 text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#diagnosticsTable').DataTable({
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search records..."
                },
                order: [[0, 'desc']], // Order by date descending
                pageLength: 10,
                responsive: true,
                dom: '<"row"<"col-md-6"l><"col-md-6"f>>rt<"row"<"col-md-6"i><"col-md-6"p>>'
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Handle delete modal
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var date = button.data('date');

                $('#deleteId').val(id);
                $('#deleteDate').text(date);
            });

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}