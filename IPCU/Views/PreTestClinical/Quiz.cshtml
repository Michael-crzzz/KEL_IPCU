@model IPCU.Models.PreTestClinical

<h2>Pre-Test Clinical Questionnaire</h2>

<form asp-controller="PreTestClinical" asp-action="Submit" method="post">
    <div>
        <label>Full Name:</label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div>
        <label>Employee ID:</label>
        <input asp-for="EmployeeId" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div>
        <label>Age Group:</label>
        <select asp-for="AgeGroup">
            <option value="">Select</option>
            <option value="18-25">18-25</option>
            <option value="26-35">26-35</option>
            <option value="36-45">36-45</option>
            <option value="46+">46+</option>
        </select>
        <span asp-validation-for="AgeGroup" class="text-danger"></span>
    </div>

    <div>
        <label>Sex:</label>
        <select asp-for="Sex">
            <option value="">Select</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>

    <div>
        <label>PWD:</label>
        <select asp-for="PWD">
            <option value="">Select</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="PWD" class="text-danger"></span>
    </div>

    <div>
        <label>Civil Status:</label>
        <select asp-for="CivilStatus">
            <option value="">Select</option>
            <option value="Single">Single</option>
            <option value="Married">Married</option>
            <option value="Divorced">Divorced</option>
            <option value="Widowed">Widowed</option>
        </select>
        <span asp-validation-for="CivilStatus" class="text-danger"></span>
    </div>

    <div>
        <label>Department:</label>
        <input asp-for="Department" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div>
        <label>COVID-19</label>
        <input type="radio" name="selectedAnswers[0]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[0]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[0]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[0]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Tetanus</label>
        <input type="radio" name="selectedAnswers[1]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[1]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[1]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[1]" value="3" /> Standard precaution
    </div>
    <div>
        <label>Diphtheria</label>
        <input type="radio" name="selectedAnswers[2]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[2]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[2]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[2]" value="3" /> Standard precaution
    </div>

    <div>
        <label>MRSA</label>
        <input type="radio" name="selectedAnswers[3]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[3]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[3]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[3]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Human Immunodeficiency Virus</label>
        <input type="radio" name="selectedAnswers[4]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[4]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[4]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[4]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Varicella</label>
        <input type="radio" name="selectedAnswers[5]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[5]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[5]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[5]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Pertussis</label>
        <input type="radio" name="selectedAnswers[6]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[6]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[6]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[6]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Human Metapneumovirus</label>
        <input type="radio" name="selectedAnswers[7]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[7]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[7]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[7]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Pulmonary Tuberculosis</label>
        <input type="radio" name="selectedAnswers[8]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[8]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[8]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[8]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Measles</label>
        <input type="radio" name="selectedAnswers[9]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[9]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[9]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[9]" value="3" /> Standard precaution
    </div>

    <div>
        <label>CRE</label>
        <input type="radio" name="selectedAnswers[10]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[10]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[10]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[10]" value="3" /> Standard precaution
    </div>

    <div>
        <label>Extrapulmonary Tuberculosis</label>
        <input type="radio" name="selectedAnswers[11]" value="0" /> Airborne precaution
        <input type="radio" name="selectedAnswers[11]" value="1" /> Contact precaution
        <input type="radio" name="selectedAnswers[11]" value="2" /> Droplet precaution
        <input type="radio" name="selectedAnswers[11]" value="3" /> Standard precaution
    </div>

    <div>
        <label>What is the correct sequence for donning PPE?</label>
        <input type="radio" name="selectedAnswers[12]" value="0" /> Gown → Gloves → Mask → Goggles
        <input type="radio" name="selectedAnswers[12]" value="1" /> Mask → Gown → Gloves → Goggles
        <input type="radio" name="selectedAnswers[12]" value="2" /> Gown → Mask → Goggles → Gloves
        <input type="radio" name="selectedAnswers[12]" value="3" /> Gloves → Gown → Goggles → Mask
    </div>

    <div>
        <label>What is the primary goal of infection prevention and control (IPC) in a healthcare setting?</label>
        <input type="radio" name="selectedAnswers[13]" value="0" /> Reduce hospital costs
        <input type="radio" name="selectedAnswers[13]" value="1" /> Protect only healthcare workers from infections
        <input type="radio" name="selectedAnswers[13]" value="2" /> Prevent the spread of infections among patients, healthcare workers, and visitors
        <input type="radio" name="selectedAnswers[13]" value="3" /> Improve hospital ranking
    </div>

  <div>
        <label>What are the 5 Moments for Hand Hygiene, as recommended by the World Health Organization (WHO)? Select all that apply.</label><br>
        <input type="checkbox" name="selectedAnswers14" value="0" /> Before touching a patient<br>
        <input type="checkbox" name="selectedAnswers14" value="1" /> Before a procedure<br>
        <input type="checkbox" name="selectedAnswers14" value="2" /> Before touching your eyes, nose, or mouth<br>
        <input type="checkbox" name="selectedAnswers14" value="3" /> After playing with animals<br>
        <input type="checkbox" name="selectedAnswers14" value="4" /> After a procedure or exposure to body fluids<br>
        <input type="checkbox" name="selectedAnswers14" value="5" /> After blowing your nose, coughing, or sneezing<br>
        <input type="checkbox" name="selectedAnswers14" value="6" /> After touching a patient<br>
        <input type="checkbox" name="selectedAnswers14" value="7" /> After using the restroom<br>
        <input type="checkbox" name="selectedAnswers14" value="8" /> After touching a patient's surroundings<br>
        <input type="checkbox" name="selectedAnswers14" value="9" /> Before preparing or eating food<br>
    </div>

    <div>
        <label>Which of the following is the most effective way to prevent the spread of infections?</label><br>
        <input type="radio" name="selectedAnswers[15]" value="0" /> Wearing a mask at all times<br>
        <input type="radio" name="selectedAnswers[15]" value="1" /> Frequent and proper hand hygiene<br>
        <input type="radio" name="selectedAnswers[15]" value="2" /> Using antibiotics for all patients<br>
        <input type="radio" name="selectedAnswers[15]" value="3" /> Spraying disinfectant in the air<br>
    </div>

    <div>
        <label>When cohorting patients with the same suspected or confirmed diagnosis in one room, the distance must be maintained between each patient at:</label><br>
        <input type="radio" name="selectedAnswers[16]" value="0" /> 1 foot<br>
        <input type="radio" name="selectedAnswers[16]" value="1" /> 2 feet<br>
        <input type="radio" name="selectedAnswers[16]" value="2" /> 3 feet (1 meter)<br>
        <input type="radio" name="selectedAnswers[16]" value="3" /> 6 feet (2 meters)<br>
    </div>

    <div>
        <label>A patient is diagnosed with Clostridioides difficile (C. difficile) infection. What type of precautions should be implemented?</label><br>
        <input type="radio" name="selectedAnswers[17]" value="0" /> Standard Precautions<br>
        <input type="radio" name="selectedAnswers[17]" value="1" /> Droplet Precautions<br>
        <input type="radio" name="selectedAnswers[17]" value="2" /> Contact Precautions<br>
        <input type="radio" name="selectedAnswers[17]" value="3" /> Airborne Precautions<br>
    </div>

    <div>
        <label>In high-risk areas of health care facilities such as isolation rooms, the recommended minimal ventilation rate is:</label><br>
        <input type="radio" name="selectedAnswers[18]" value="0" /> 8 air changes per hour (ACH)<br>
        <input type="radio" name="selectedAnswers[18]" value="1" /> 10 air changes per hour (ACH)<br>
        <input type="radio" name="selectedAnswers[18]" value="2" /> 12 air changes per hour (ACH)<br>
        <input type="radio" name="selectedAnswers[18]" value="3" /> 14 air changes per hour (ACH)<br>
    </div>

    <div>
        <label>Alcohol-based hand rubbing should be done for how many seconds to be effective?</label><br>
        <input type="radio" name="selectedAnswers[19]" value="0" /> 5-10 seconds<br>
        <input type="radio" name="selectedAnswers[19]" value="1" /> 10-20 seconds<br>
        <input type="radio" name="selectedAnswers[19]" value="2" /> 20-30 seconds<br>
        <input type="radio" name="selectedAnswers[19]" value="3" /> 30-60 seconds<br>
    </div>

    <div>
        <label>Which type of PPE is required when caring for a patient with confirmed tuberculosis?</label><br>
        <input type="radio" name="selectedAnswers[20]" value="0" /> Surgical mask<br>
        <input type="radio" name="selectedAnswers[20]" value="1" /> N95 respirator<br>
        <input type="radio" name="selectedAnswers[20]" value="2" /> Face shield only<br>
        <input type="radio" name="selectedAnswers[20]" value="3" /> Gloves only<br>
    </div>

    <div>
        <label>If a healthcare worker sustained a needle stick injury in the course of her duty, he/she should report within?</label><br>
        <input type="radio" name="selectedAnswers[21]" value="0" /> Within the week<br>
        <input type="radio" name="selectedAnswers[21]" value="1" /> 1 hour<br>
        <input type="radio" name="selectedAnswers[21]" value="2" /> 24 hours<br>
        <input type="radio" name="selectedAnswers[21]" value="3" /> 72 hours<br>
    </div>

    <div>
        <label>What is the correct sequence for doffing PPE?</label><br>
        <input type="radio" name="selectedAnswers[22]" value="0" /> Gown → Gloves → Mask → Goggles<br>
        <input type="radio" name="selectedAnswers[22]" value="1" /> Mask → Gown → Gloves → Goggles<br>
        <input type="radio" name="selectedAnswers[22]" value="2" /> Gown → Mask → Goggles → Gloves<br>
        <input type="radio" name="selectedAnswers[22]" value="3" /> Gloves → Gown → Goggles → Mask<br>
    </div>

    <button type="submit">Submit Quiz</button>
</form>

