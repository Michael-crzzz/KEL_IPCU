<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h2 class="text-dark font-weight-bold">Infection Checklist Dashboard</h2>
            <p class="text-muted">Manage and review all infection checklists efficiently</p>
        </div>
    </div>

    <div class="row">
        <!-- Dashboard Cards -->
        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-clipboard-check fa-3x text-info mb-3"></i>
                    <h5 class="card-title text-dark">SST Infection Checklist</h5>
                    <p class="text-muted">Review SST Infection Checklist forms.</p>
                    <a asp-controller="InfectionChecklist" asp-action="Index" class="btn btn-outline-info">Open Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-notes-medical fa-3x text-warning mb-3"></i>
                    <h5 class="card-title text-dark">UTI Infection Checklist</h5>
                    <p class="text-muted">Manage Urinary Tract Infection forms.</p>
                    <a asp-controller="UTIForm" asp-action="Index" class="btn btn-outline-warning">Open Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-heartbeat fa-3x text-danger mb-3"></i>
                    <h5 class="card-title text-dark">CVS Infection Checklist</h5>
                    <p class="text-muted">Review Cardiovascular System Infection forms.</p>
                    <a asp-controller="CardiovascularSystemInfection" asp-action="Index" class="btn btn-outline-danger">Open Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-lungs fa-3x text-success mb-3"></i>
                    <h5 class="card-title text-dark">Pediatric VAE Checklist</h5>
                    <p class="text-muted">Monitor Pediatric Ventilator-Associated Events.</p>
                    <a asp-controller="PediatricVAEChecklist" asp-action="Index" class="btn btn-outline-success">Open Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-vial fa-3x text-primary mb-3"></i>
                    <h5 class="card-title text-dark">Laboratory Confirmed Bloodstream Infection</h5>
                    <p class="text-muted">Manage Bloodstream Infection Checklist forms.</p>
                    <a asp-controller="LaboratoryConfirmedBloodstreamInfection" asp-action="Index" class="btn btn-outline-primary">Open Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="500">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-lungs-virus fa-3x text-dark mb-3"></i>
                    <h5 class="card-title text-dark">Pneumonia Checklist</h5>
                    <p class="text-muted">Create and manage Pneumonia checklist records.</p>
                    <a asp-controller="Pneumonias" asp-action="Create" class="btn btn-outline-dark">Create Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="600">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-procedures fa-3x text-primary mb-3"></i>
                    <h5 class="card-title text-dark">Ventilator Event Checklist</h5>
                    <p class="text-muted">Manage Ventilator Event Checklist forms.</p>
                    <a asp-controller="VentilatorEventChecklist" asp-action="Index" class="btn btn-outline-primary">Open Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="700">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-user-plus fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title text-dark">Surgical Site Infection</h5>
                    <p class="text-muted">Surgical Site Infection.</p>
                    <a asp-controller="SurgicalSiteInfection" asp-action="Index" class="btn btn-outline-secondary">Create Form</a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="700">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-user-plus fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title text-dark">USIS Create Checklist</h5>
                    <p class="text-muted">Create and manage USIS records.</p>
                    <a asp-controller="Usis" asp-action="Create" class="btn btn-outline-secondary">Create Form</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .btn {
        font-weight: 600;
    }

    .text-muted {
        font-size: 0.9rem;
    }
</style>

