    <script>
        $(document).ready(function () {
            // Event handler for input in the name fields (First, Middle, Last)
            $('#Fname, #Mname, #Lname').on('input', function () {
                var searchTerm = $(this).val();  // Get the value of the field
                var field = $(this).attr('id');  // Identify the field being used

                if (searchTerm.length >= 2) {  // Only search if input has at least 2 characters
                    $.ajax({
                        url: '@Url.Action("FindNamesByPartialName", "TCSkillsChecklistReals")',  // Controller and action name
                        type: 'GET',
                        data: { name: searchTerm },
                        success: function (response) {
                            // Clear previous results
                            $('#resultsList').empty();

                            if (response.success) {
                                // Append matching names to the dropdown
                                if (response.names.length > 0) {
                                    response.names.forEach(function (name) {
                                        var listItem = $('<li>')
                                            .addClass('list-group-item')
                                            .text(name)
                                            .on('click', function () {
                                                // Fill the fields with the selected name
                                                var nameParts = name.split(' ');  // Assuming "First Middle Last"
                                                $('#Fname').val(nameParts[0]);
                                                $('#Mname').val(nameParts[1] || ''); // In case middle name is empty
                                                $('#Lname').val(nameParts[2] || ''); // In case last name is empty
                                                $('#nameDropdown').hide();  // Hide the dropdown after selection
                                            });
                                        $('#resultsList').append(listItem);
                                    });
                                } else {
                                    // If no results, show "No training found yet"
                                    var noResultsItem = $('<li>')
                                        .addClass('list-group-item')
                                        .text('No training found yet.')
                                        .css('text-align', 'center');
                                    $('#resultsList').append(noResultsItem);
                                }

                                // Show the dropdown
                                $('#nameDropdown').show();
                            } else {
                                // Handle error case if needed
                                $('#resultsList').append('<li class="list-group-item text-center">No training found yet.</li>');
                                $('#nameDropdown').show();
                            }
                        },
                        error: function () {
                            alert('Error occurred while searching.');
                        }
                    });
                } else {
                    // Hide the dropdown if input is too short
                    $('#nameDropdown').hide();
                }
            });

            // Hide the dropdown when clicked outside
            $(document).click(function (event) {
                if (!$(event.target).closest('#nameDropdown, #Fname, #Mname, #Lname').length) {
                    $('#nameDropdown').hide();
                }
            });
        });
    </script>


