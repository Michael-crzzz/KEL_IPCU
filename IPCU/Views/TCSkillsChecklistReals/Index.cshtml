@model IEnumerable<IPCU.Models.TCSkillsChecklistReal>

@{
    ViewData["Title"] = "TC Skills Checklist";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<!-- Title Section with a more formal design -->
<div class="text-center mb-4">
    <h3 class="display-4 text-primary">TC Skills Checklist</h3>
    <p class="lead">For Station: <strong>@ViewBag.Station</strong>, Room: <strong>@ViewBag.RoomID</strong></p>
</div>

<!-- Create New Button -->
<div class="text-end mb-3">
    <a asp-action="Create" asp-route-roomId="@ViewData["RoomId"]" class="btn btn-success btn-lg">
        <i class="fas fa-plus-circle"></i> Create New Checklist
    </a>
</div>

<!-- Table with enhanced UI -->
<table class="table table-bordered table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Area)</th>
            <th>@Html.DisplayNameFor(model => model.ObserverName)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Area)</td>
                <td>@Html.DisplayFor(modelItem => item.ObserverName)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination or other controls if necessary -->
<div class="d-flex justify-content-center mt-4">
    <!-- Example Pagination (you can implement this based on your actual pagination logic) -->
    <nav>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>

