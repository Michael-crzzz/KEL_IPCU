@model IPCU.Models.VentilatorEventChecklist

@{
    ViewData["Title"] = "Patient Details";
}

<h2>Patient Details</h2>

<table class="table table-bordered">
    <tr>
        <td>First Name: @Model.Fname</td>
        <td>Middle Name: @Model.Mname</td>
        <td>Last Name: @Model.Lname</td>
        <td>Hospital Number: @Model.HospitalNumber</td>
    </tr>

    <tr>
        <td>Date of Birth: @(Model.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")</td>
        <td>Age: @Model.Age</td>
        <td>Unit/Ward Area: @Model.UnitWardArea</td>
        <td>Main Service: @Model.MainService</td>
    </tr>

    <tr>
        <td>Date of Event: @Model.DateOfEvent?.ToString("yyyy-MM-dd")</td>
        <td>Investigator: @Model.Investigator</td>
        <td>Date of Admission: @Model.DateOfAdmission?.ToString("yyyy-MM-dd")</td>
        <td>Disposition: @Model.Disposition</td>
    </tr>
    <tr>
        <td>Disposition Date: @Model.DispositionDate?.ToString("yyyy-MM-dd")</td>
        <td>Gender: @Model.Gender</td>
        <td>Classification: @Model.Classification</td>
        <td>
            MDRO: @Model.MDRO
            @if (Model.MDRO?.Trim().ToLower() == "yes" && !string.IsNullOrWhiteSpace(Model.MDROOrganism))
            {
                <text><br />MDRO Organism: @Model.MDROOrganism</text>
            }
        </td>

    </tr>

    <tr>
        <td>Date of Intubation: @Model.DateofIntubation?.ToString("yyyy-MM-dd")</td>

    @if (!string.IsNullOrEmpty(Model.DispositionTransfer))
    {
            <td colspan="1">Disposition Transfer: @Model.DispositionTransfer</td>
    }

    </tr>

 </table>

<!-- VAC CHECKBOX -->
<legend style="text-align:center; font-weight:bold; font-size:16px; border: 1px solid #ccc; padding: 8px; border-radius: 5px;">
    VENTILATOR ASSOCIATED CONDITION (VAC)
</legend>

<p>Baseline period of improvement or stability* on the ventilator</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">At least one (1) of the following must be present:</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <div>
                    <input type="checkbox" @(Model.Vac1 ? "checked" : "") disabled />
                    Daily minimum FiO<sub>2</sub> increase &ge; 0.20 (20 points) for &ge; 2 days, OR
                </div>
                <div>
                    <input type="checkbox" @(Model.Vac2 ? "checked" : "") disabled />
                    Daily minimum PEEP increase &ge; 3 cm H<sub>2</sub>O for &ge; 2 days
                </div>
            </td>
        </tr>
    </tbody>
</table>

<!-- IVAC CHECKBOX -->
<legend style="text-align:center; font-weight:bold; font-size:16px; border: 1px solid #ccc; padding: 8px; border-radius: 5px;">
    INFECTION-RELATED VENTILATOR-ASSOCIATED COMPLICATION (IVAC)
</legend>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">All of the following must be present:</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <div>
                    <input type="checkbox" @(Model.IVac1 ? "checked" : "") disabled />
                    Temperature &gt; 38°C or &lt; 36°C
                </div>
                <div>
                    <input type="checkbox" @(Model.IVac2 ? "checked" : "") disabled />
                    White blood cell count ≥ 12,000 or ≤ 4,000 cells/mm³
                </div>
                <div>
                    <b>AND</b>
                    <input type="checkbox" @(Model.IVac3 ? "checked" : "") disabled />
                    A new antimicrobial agent is started and continued for ≥ 4 days
                </div>
            </td>
        </tr>
    </tbody>
</table>

<!-- PVAP CHECKBOX -->
<legend style="text-align:center; font-weight:bold; font-size:16px; border: 1px solid #ccc; padding: 8px; border-radius: 5px;">
    POSSIBLE VENTILATOR-ASSOCIATED PNEUMONIA (PVAP)
</legend>

<p><b>AND</b>, Patient must meet one of following criteria <b>on or after calendar day 3 of MV and within 2 calendar days before or after the onset</b> of worsening oxygenation <em>(Refer to VAE Protocol for organisms excluded from meeting PVAP):</em></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">Criterion 1: Positive culture of one (1) of the following specimens</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap1Endo ? "checked" : "") disabled />
                Endotracheal aspirate
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap1Lung ? "checked" : "") disabled />
                Bronchoalveolar lavage
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap1Bronch ? "checked" : "") disabled />
                Lung tissue
            </td>
        </tr>
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">Criterion 2: Purulent respiratory secretions and organism(s) identified</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap2Sputum ? "checked" : "") disabled />
                Sputum
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap2Endo ? "checked" : "") disabled />
                Endotracheal aspirate
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap2Lung ? "checked" : "") disabled />
                Lung tissue
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap2Bronch ? "checked" : "") disabled />
                Bronchoalveolar lavage
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap2Specimen ? "checked" : "") disabled />
                Protected specimen brush
            </td>
        </tr>
    </tbody>
</table>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">Criterion 3: One of the following positive tests</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap3Organism ? "checked" : "") disabled />
                Organism(s) identified from pleural fluid
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap3Lung ? "checked" : "") disabled />
                Lung Histopathology
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap3Legionella ? "checked" : "") disabled />
                Diagnostic test for Legionella species
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" @(Model.Pvap3Viral ? "checked" : "") disabled />
                Diagnostic test for selected viral pathogens
            </td>
        </tr>
    </tbody>
</table>

<p>
    <em>
        *Stability or improvement on the ventilator is defined by ≥ 2 calendar days of stable or decreasing daily minimum FiO2<br>
        **Collected after 2 days of mechanical ventilation and within +/- 2 days of onset of increase in FiO2 or PEEP
    </em>
</p>

<table class="table table-bordered">
    <tbody>
        <tr>
            <td><b>Culture Date: </b> @Model.PvapCultureDate?.ToShortDateString()</td>
        </tr>
        <tr>
            <td><b>Culture Results: </b>@Model.PvapResult</td>
        </tr>
        <tr>
            <td><b>Remarks: </b>@Model.VaeRemarks</td>
        </tr>
    </tbody>
</table>