@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<h2>Roles List</h2>
<p>
    <a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Role ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Id</td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="ManageUsersInRole" asp-route-roleId="@role.Id" class="btn btn-info btn-sm">Manage Users</a>
                </td>
            </tr>
        }
    </tbody>
</table>