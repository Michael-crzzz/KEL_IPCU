@model IPCU.Models.PatientUsiViewModel

@{
    ViewData["Title"] = "Patient Index";
}

<h1>Patient Index</h1>

<h4>Patient Information</h4>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Hospital Number</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Unit/Ward/Area</th>
            <th>Investigator</th>
            <th>Date of Admission</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usi in Model.UsiRecords)
        {
            <tr>
                <td>@($"{usi.Fname} {usi.Mname} {usi.Lname}")</td>
                <td>@usi.HospitalNumber</td>
                <td>@usi.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@usi.Age</td>
                <td>@usi.UnitWardArea</td>
                <td>@usi.Investigator</td>
                <td>@usi.DateOfAdmission.ToString("yyyy-MM-dd")</td>
                <td>@usi.Gender</td>
                <td>
                    <a href="@Url.Action("Details", "Usis", new { id = usi.Id })" class="btn btn-primary btn-sm">View</a>
                    <a href="@Url.Action("Edit", "Usis", new { id = usi.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Usis", new { id = usi.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
