@model IEnumerable<IPCU.Models.GIInfectionChecklist>
@using IPCU.Models.InfectionControl.Models
@{
    ViewData["Title"] = "Environmental Cleaning and Disinfection";
    var allForms = ViewBag.AllForms as List<InfectionControlMonitoringForm>;
}
<h2>
    Environmental Cleaning and Disinfection
    Assessment and Monitoring Form
</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hospital Number</th>
            <th>Patient Name</th>
            <th>Investigator</th>
            <th>Admission Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HospitalNumber</td>
                <td>@($"{item.Fname} {item.Mname} {item.Lname}")</td>
                <td>@item.Investigator</td>
                <td>
                    @(item.DateOfAdmission?.ToString("yyyy-MM-dd") ?? "N/A")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
