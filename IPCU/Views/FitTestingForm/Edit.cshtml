@model IPCU.Models.FitTestingForm

@{
    ViewData["Title"] = "Edit Fit Testing Form";
}

<!-- Bootstrap & FontAwesome for Better Styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden; /* Prevent scrolling */
    }

    .container-fluid {
        height: 100vh; /* Full viewport height */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .card {
        width: 90vw; /* Take up most of the viewport width */
        max-width: 1200px; /* Keep it responsive */
        height: 95vh; /* Almost full height */
        overflow: auto; /* Enable internal scrolling if needed */
        padding: 20px;
    }

    .form-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .form-check {
        margin-bottom: 10px;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        padding-top: 20px;
    }
</style>

<div class="container-fluid">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fa fa-edit"></i> Edit Fit Testing Form</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Personal Information -->
                <h5 class="text-primary"><i class="fa fa-user"></i> Personal Information</h5>
                <hr>
                <div class="form-section">
                    <div>
                        <label asp-for="HCW_Name" class="form-label fw-bold">Name of Healthcare Worker (HCW): </label>
                        <input asp-for="HCW_Name" class="form-control" placeholder="Enter name" />
                        <span asp-validation-for="HCW_Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="DUO" class="form-label fw-bold">Department/Unit/Office:</label>
                        <input asp-for="DUO" class="form-control" placeholder="Enter DUO" />
                        <span asp-validation-for="DUO" class="text-danger"></span>
                    </div>
                </div>

                <!-- Fit Test Details -->
                <h5 class="text-primary mt-3"><i class="fa fa-flask"></i> Fit Test Details</h5>
                <hr>
                <div class="form-section">
                    <div>
                        <label asp-for="Fit_Test_Solution" class="form-label fw-bold">Fit Test Solution</label>
                        <input asp-for="Fit_Test_Solution" class="form-control" placeholder="Solution type" />
                        <span asp-validation-for="Fit_Test_Solution" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Sensitivity_Test" class="form-label fw-bold">Sensitivity Test</label>
                        <input asp-for="Sensitivity_Test" class="form-control" placeholder="Sensitivity test result" />
                        <span asp-validation-for="Sensitivity_Test" class="text-danger"></span>
                    </div>
                </div>

                <!-- Fit Tester Info -->
                <h5 class="text-primary mt-3"><i class="fa fa-user-md"></i> Fit Tester Information</h5>
                <hr>
                <div class="form-section">
                    <div>
                        <label asp-for="Name_of_Fit_Tester" class="form-label fw-bold">Name of fit tester</label>
                        <input asp-for="Name_of_Fit_Tester" class="form-control" placeholder="Enter fit tester's name" />
                        <span asp-validation-for="Name_of_Fit_Tester" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="DUO_Tester" class="form-label fw-bold">Department/Unit/Office (Tester)</label>
                        <input asp-for="DUO_Tester" class="form-control" placeholder="Enter DUO Tester" />
                        <span asp-validation-for="DUO_Tester" class="text-danger"></span>
                    </div>
                </div>

                <!-- Breathing & Movement Tests -->
                <h5 class="text-primary mt-3"><i class="fa fa-wind"></i> Breathing & Movement Tests</h5>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Normal_Breathing">
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Normal_Breathing)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Deep_Breathing">
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Deep_Breathing)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Turn_head_side_to_side">
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Turn_head_side_to_side)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Move_head_up_and_down">
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Move_head_up_and_down)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Reading">
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Reading)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Bending_Jogging">
                            <label class="form-check-label">@Html.DisplayNameFor(model => model.Bending_Jogging)</label>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="btn-container">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
