@model IPCU.Models.FitTestingForm

@{
    ViewData["Title"] = "Create Fit Testing Record";
}

<!-- Bootstrap & Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fa fa-user-md"></i> Create Fit Testing Record</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HCW_Name" class="form-label fw-bold">Healthcare Worker</label>
                                    <input asp-for="HCW_Name" class="form-control" placeholder="Enter Healthcare Worker Name" />
                                    <span asp-validation-for="HCW_Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DUO" class="form-label fw-bold">Department/Unit/Office</label>
                                    <input asp-for="DUO" class="form-control" placeholder="Enter Department/Unit/Office:" />
                                    <span asp-validation-for="DUO" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Limitation as Dropdown -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Limitation</label>

                            <div>
                                <input type="checkbox" name="Limitation" value="Glasses" />
                                <label>Glasses</label>
                            </div>

                            <div>
                                <input type="checkbox" name="Limitation" value="Beard Growth" />
                                <label>Beard Growth</label>
                            </div>

                            <div>
                                <input type="checkbox" name="Limitation" value="Dentures" />
                                <label>Dentures</label>
                            </div>

                            <div>
                                <input type="checkbox" name="Limitation" value="Cosmetic surgery" />
                                <label>Cosmetic surgery</label>
                            </div>

                            <div>
                                <input type="checkbox" name="Limitation" value="Facial scarring" />
                                <label>Facial scarring</label>
                            </div>

                            <div>
                                <input type="checkbox" id="otherCheckbox" name="Limitation" value="Other" />
                                <label>Other</label>
                            </div>

                            <!-- Hidden Text Field (Initially Hidden) -->
                            <div id="otherTextContainer" style="display: none; margin-top: 10px;">
                                <input type="text" id="otherText" name="OtherLimitation" class="form-control" placeholder="Specify other limitation" />
                            </div>

                            <span asp-validation-for="Limitation" class="text-danger"></span>
                        </div>

                        <script>
                            document.getElementById("otherCheckbox").addEventListener("change", function () {
                                var textField = document.getElementById("otherTextContainer");
                                textField.style.display = this.checked ? "block" : "none";
                            });
                        </script>


                        <div class="row">
                            <!-- Fit Test Solution as Dropdown -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Fit_Test_Solution" class="form-label fw-bold">Fit Test Solution</label>
                                    <select asp-for="Fit_Test_Solution" class="form-select">
                                        <option value="">Select Solution</option>
                                        <option value="Saccharin">Saccharin</option>
                                        <option value="Bitrex">Bitrex</option>
                                        <option value="Isoamyl Acetate">Isoamyl Acetate</option>
                                    </select>
                                    <span asp-validation-for="Fit_Test_Solution" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Sensitivity Test with Range -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Sensitivity_Test" class="form-label fw-bold">Sensitivity Test</label>
                                    <input asp-for="Sensitivity_Test" class="form-control" type="number" min="1" max="30" placeholder="Enter Sensitivity Test (1-30)" />
                                    <span asp-validation-for="Sensitivity_Test" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="fw-bold mt-3">Respiratory Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Respiratory_Type" class="form-label fw-bold">Respiratory Type</label>
                                    <input asp-for="Respiratory_Type" class="form-control" placeholder="Enter Respiratory Type" />
                                    <span asp-validation-for="Respiratory_Type" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label fw-bold"></label>
                                    <input asp-for="Model" class="form-control" placeholder="Enter Model" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Size" class="form-label fw-bold"></label>
                            <input asp-for="Size" class="form-control" placeholder="Enter Size" />
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>

                        <h5 class="fw-bold mt-3">Breathing & Movement Tests</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Normal_Breathing" />
                                    <label class="form-check-label">Normal Breathing</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Deep_Breathing" />
                                    <label class="form-check-label">Deep Breathing</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Turn_head_side_to_side" />
                                    <label class="form-check-label">Turn Head side to side</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Move_head_up_and_down" />
                                    <label class="form-check-label">Move Head up and down</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Reading" />
                                    <label class="form-check-label">@Html.DisplayNameFor(model => model.Reading)</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Bending_Jogging" />
                                    <label class="form-check-label">Bending Jogging</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Normal_Breathing_2" />
                                    <label class="form-check-label">2nd Normal Breathing</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 mt-3">
                            <label asp-for="Name_of_Fit_Tester" class="form-label fw-bold">Name of Fit Tester</label>
                            <input asp-for="Name_of_Fit_Tester" class="form-control" placeholder="Enter Fit Tester Name" />
                            <span asp-validation-for="Name_of_Fit_Tester" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DUO_Tester" class="form-label fw-bold">
                                Department/Unit/Office:
                            </label>
                            <input asp-for="DUO_Tester" class="form-control" placeholder="Enter Department/Unit/Office" />
                            <span asp-validation-for="DUO_Tester" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
