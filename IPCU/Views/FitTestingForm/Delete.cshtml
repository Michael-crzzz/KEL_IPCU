@model IPCU.Models.FitTestingForm

@{
    ViewData["Title"] = "Delete";
}

<!-- Bootstrap & FontAwesome for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-4">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h4><i class="fa-solid fa-triangle-exclamation"></i> Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">Are you sure you want to delete this record?</h5>
            <hr />

            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.HCW_Name)</th>
                            <td>@Html.DisplayFor(model => model.HCW_Name)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.DUO)</th>
                            <td>@Html.DisplayFor(model => model.DUO)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Limitation)</th>
                            <td>@Html.DisplayFor(model => model.Limitation)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Fit_Test_Solution)</th>
                            <td>@Html.DisplayFor(model => model.Fit_Test_Solution)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Sensitivity_Test)</th>
                            <td>@Html.DisplayFor(model => model.Sensitivity_Test)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Respiratory_Type)</th>
                            <td>@Html.DisplayFor(model => model.Respiratory_Type)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Model)</th>
                            <td>@Html.DisplayFor(model => model.Model)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Size)</th>
                            <td>@Html.DisplayFor(model => model.Size)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Test_Results)</th>
                            <td>@Html.DisplayFor(model => model.Test_Results)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Name_of_Fit_Tester)</th>
                            <td>@Html.DisplayFor(model => model.Name_of_Fit_Tester)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.SubmittedAt)</th>
                            <td>@Html.DisplayFor(model => model.SubmittedAt)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" class="text-center mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
            </form>
        </div>
    </div>
</div>
