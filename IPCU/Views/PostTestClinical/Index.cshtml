@model IPCU.Models.PostTestClinical

<div style="max-width: 600px; margin: 0 auto; font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    
    <form asp-controller="PostTestClinical" asp-action="Submit" method="post" style="margin-top: 15px;">
        <!-- User Information -->
        <fieldset style="margin: 20px 0; padding: 25px; border: 1px solid #e0e0e0; border-radius: 6px; background-color: #fff;">
            
            <!-- Header Section -->
            <div style="text-align: center; margin-bottom: 25px;">
                <h1 style="font-size: 22px; color: #2c3e50; margin-bottom: 8px; font-weight: 600; letter-spacing: 0.5px;">
                    Post Test Clinical Quiz
                </h1>
                <p style="color: #7f8c8d; font-size: 14px; margin: 0;">
                    Please fill out all fields before submitting.
                </p>
            </div>

            <!-- Personal Information Section -->
            <h2 style="font-size: 16px; color: #2c3e50; margin-bottom: 20px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">
                Personal Information
            </h2>

            <!-- Form Fields -->
            <div style="display: grid; grid-gap: 18px;">
                <div>
                    <label for="FullName" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">Full Name</label>
                    <input id="FullName" name="FullName" type="text" placeholder="Enter your full name"
                           style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px; transition: border 0.2s;">
                </div>

                <div>
                    <label for="EmployeeId" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">Employee ID</label>
                    <input id="EmployeeId" name="EmployeeId" type="text" placeholder="Enter your Employee ID"
                           style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px;">
                </div>

                <div>
                    <label for="AgeGroup" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">Age Group</label>
                    <select id="AgeGroup" name="AgeGroup"
                            style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px; background-color: #fff; cursor: pointer;">
                        <option value="">Select age group</option>
                        <option value="18-25">18-25</option>
                        <option value="26-35">26-35</option>
                        <option value="36-45">36-45</option>
                        <option value="46+">46+</option>
                    </select>
                </div>

                <div>
                    <label for="Sex" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">Sex</label>
                    <select id="Sex" name="Sex"
                            style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px; background-color: #fff; cursor: pointer;">
                        <option value="">Select sex</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>

                <div>
                    <label for="PWD" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">PWD</label>
                    <select id="PWD" name="PWD"
                            style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px; background-color: #fff; cursor: pointer;">
                        <option value="">Select option</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>

                <div>
                    <label for="CivilStatus" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">Civil Status</label>
                    <select id="CivilStatus" name="CivilStatus"
                            style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px; background-color: #fff; cursor: pointer;">
                        <option value="">Select status</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Divorced">Divorced</option>
                        <option value="Widowed">Widowed</option>
                    </select>
                </div>

                <div>
                    <label for="Department" style="display: block; margin-bottom: 6px; font-size: 14px; color: #34495e; font-weight: 500;">Department</label>
                    <input id="Department" name="Department" type="text" placeholder="Enter your department"
                           style="width: 100%; padding: 10px 12px; border: 1px solid #dfe6e9; border-radius: 4px; font-size: 14px;">
                </div>
            </div>

        </fieldset>

        <!-- Questions Section -->
        <fieldset style="margin: 20px 0; padding: 25px; border: 1px solid #e0e0e0; border-radius: 6px; background-color: #fff;">
            <legend style="font-weight: 600; color: #2c3e50; font-size: 16px; text-transform: uppercase; letter-spacing: 0.5px; padding: 0 10px;">Clinical Questions</legend>

            <!-- Question 1 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">1. Tetanus</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question1" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question1" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question1" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question1" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 2 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">2. Human Metapneumovirus</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question2" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question2" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question2" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question2" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 3 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">3. CRE</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question3" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question3" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question3" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question3" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 4 to 17 would follow the same pattern -->
            <!-- Question 4 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">4. Diphtheria</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question4" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question4" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question4" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question4" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 5 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">5. Varicella</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question5" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question5" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question5" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question5" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 6 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">6. COVID-19</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question6" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question6" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question6" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question6" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 7 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">7. Human Immunodeficiency virus</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question7" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question7" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question7" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question7" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 8 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">8. Extrapulmonary Tuberculosis</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question8" value="0" style="margin-right: 8px;" /> Airborne precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question8" value="1" style="margin-right: 8px;" /> Contact precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question8" value="2" style="margin-right: 8px;" /> Droplet precaution
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question8" value="3" style="margin-right: 8px;" /> Standard precaution
                    </label>
                </div>
            </div>

            <!-- Question 9 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">9. A patient is diagnosed with Clostridioides difficile (C. difficile) infection. What type of precautions should be implemented?</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question9" value="0" style="margin-right: 8px;" /> Standard Precautions
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question9" value="1" style="margin-right: 8px;" /> Contact Precautions
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question9" value="2" style="margin-right: 8px;" /> Droplet Precautions
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question9" value="3" style="margin-right: 8px;" /> Airborne Precautions
                    </label>
                </div>
            </div>

            <!-- Question 10 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">10. In high-risk areas of health care facilities such as isolation rooms, the recommended minimal ventilation rate is</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question10" value="0" style="margin-right: 8px;" /> 8 air changes per hour (ACH)
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question10" value="1" style="margin-right: 8px;" /> 10 air changes per hour (ACH)
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question10" value="2" style="margin-right: 8px;" /> 12 air changes per hour (ACH)
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question10" value="3 style="margin-right: 8px;" /> 14 air changes per hour (ACH)
                    </label>
                </div>
            </div>

            <!-- Question 11 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">11. If a healthcare worker sustained a needle stick injury in the course of duty, he/she should report within?</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question11" value="0" style="margin-right: 8px;" /> Within the week
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question11" value="1" style="margin-right: 8px;" /> 1 hour
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question11" value="2" style="margin-right: 8px;" /> 24 hours
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question11" value="3" style="margin-right: 8px;" /> 72 hours
                    </label>
                </div>
            </div>

            <!-- Question 12 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">12. What is the correct sequence for doffing PPE?</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question12" value="0" style="margin-right: 8px;" /> Gown → Gloves → Mask → Goggles
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question12" value="1" style="margin-right: 8px;" /> Mask → Gown → Gloves → Goggles
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question12" value="2" style="margin-right: 8px;" /> Gown → Mask → Goggles → Gloves
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question12" value="3" style="margin-right: 8px;" /> Gloves → Gown → Goggles → Mask
                    </label>
                </div>
            </div>

            <!-- Question 13 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">13. What is the primary goal of infection prevention and control (IPC) in a healthcare setting?</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question13" value="0" style="margin-right: 8px;" /> Reduce hospital costs
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question13" value="1" style="margin-right: 8px;" /> Protect only healthcare workers from infections
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question13" value="2" style="margin-right: 8px;" /> Prevent the spread of infections among patients, healthcare workers, and visitors
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question13" value="3" style="margin-right: 8px;" /> Improve hospital ranking
                    </label>
                </div>
            </div>

            <!-- Question 14 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">14. Alcohol-based hand rubbing should be done for how many seconds to be effective?</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question14" value="0" style="margin-right: 8px;" /> 5-10 seconds
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question14" value="1" style="margin-right: 8px;" /> 10-20 seconds
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question14" value="2" style="margin-right: 8px;" /> 20-30 seconds
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question14" value="3" style="margin-right: 8px;" /> 30-60 seconds
                    </label>
                </div>
            </div>

            <!-- Question 15 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">15. Which type of PPE is required when caring for a patient with confirmed tuberculosis?</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question15" value="0" style="margin-right: 8px;" /> Surgical mask
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question15" value="1" style="margin-right: 8px;" /> N95 respirator
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question15" value="2" style="margin-right: 8px;" /> Face shield only
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question15" value="3" style="margin-right: 8px;" /> Gloves only
                    </label>
                </div>
            </div>

            <!-- Question 16 -->
            <div style="margin-bottom: 18px; padding: 15px; background-color: #f8f9fa; border-radius: 4px;">
                <h4 style="margin: 0 0 10px 0; font-size: 14px; color: #34495e; font-weight: 500;">16. When cohorting patients with the same suspected or confirmed diagnosis in one room, the distance must be maintained between each patient at:</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question16" value="0" style="margin-right: 8px;" /> 1 foot
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
                        <input type="radio" name="Question16" value="1" style="margin-right: 8px;" /> 2 feet
                    </label>
                    <label style="display: flex; align-items: center; font-size: 14px; color: #34495e;">
