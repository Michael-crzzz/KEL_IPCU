@model IPCU.Models.PostTestClinical

<h2>Post-Test Clinical Questionnaire</h2>

<form asp-controller="PostTestClinical" asp-action="Submit" method="post">
    <!-- User Information -->
    <div>
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <label asp-for="EmployeeId">Employee ID</label>
        <input asp-for="EmployeeId" />
        <span asp-validation-for="EmployeeId"></span>
    </div>
    <div>
        <label asp-for="AgeGroup">Age Group</label>
        <input asp-for="AgeGroup" />
        <span asp-validation-for="AgeGroup"></span>
    </div>
    <div>
        <label asp-for="Sex">Sex</label>
        <input asp-for="Sex" />
        <span asp-validation-for="Sex"></span>
    </div>
    <div>
        <label asp-for="PWD">PWD Status</label>
        <input asp-for="PWD" />
        <span asp-validation-for="PWD"></span>
    </div>
    <div>
        <label asp-for="CivilStatus">Civil Status</label>
        <input asp-for="CivilStatus" />
        <span asp-validation-for="CivilStatus"></span>
    </div>
    <div>
        <label asp-for="Department">Department</label>
        <input asp-for="Department" />
        <span asp-validation-for="Department"></span>
    </div>

    <!-- Questions -->

    <div>
        <h4>Tetanus</h4>
        <input type="radio" name="Question1" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question1" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question1" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question1" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>Human Metapneumovirus</h4>
        <input type="radio" name="Question2" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question2" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question2" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question2" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>CRE</h4>
        <input type="radio" name="Question3" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question3" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question3" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question3" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>Diphtheria</h4>
        <input type="radio" name="Question4" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question4" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question4" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question4" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>Varicella</h4>
        <input type="radio" name="Question5" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question5" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question5" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question5" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>COVID-19</h4>
        <input type="radio" name="Question6" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question6" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question6" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question6" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>Human Immunodeficiency virus</h4>
        <input type="radio" name="Question7" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question7" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question7" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question7" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>Extrapulmonary Tuberculosis</h4>
        <input type="radio" name="Question8" value="Airborne precaution" /> Airborne precaution
        <input type="radio" name="Question8" value="Contact precaution	" /> Contact precaution
        <input type="radio" name="Question8" value="Droplet precaution	" /> Droplet precaution
        <input type="radio" name="Question8" value="Standard precaution" /> Standard precaution
    </div>

    <div>
        <h4>A patient is diagnosed with Clostridioides difficile (C. difficile) infection. What type of precautions should be implemented?</h4>
        <input type="radio" name="Question9" value="Standard Precautions" /> Standard Precautions
        <input type="radio" name="Question9" value="Standard Precautions	" /> Standard Precautions
        <input type="radio" name="Question9" value="Standard Precautions	" /> Standard Precautions
        <input type="radio" name="Question9" value="Standard Precautions" /> Standard Precautions
    </div>

    <div>
        <h4>In high-risk areas of health care facilities such as isolation rooms, the recommended minimal ventilation rate is</h4>
        <input type="radio" name="Question10" value="8 ACH" /> 8 air changes per hour (ACH)
        <input type="radio" name="Question10" value="10 ACH" /> 10 air changes per hour (ACH)
        <input type="radio" name="Question10" value="12 ACH" /> 12 air changes per hour (ACH)
        <input type="radio" name="Question10" value="14 ACH" /> 14 air changes per hour (ACH)
    </div>

    <div>
        <h4>If a healthcare worker sustained a needle stick injury in the course of duty, he/she should report within?</h4>
        <input type="radio" name="Question11" value="Within the week" /> Within the week<br>
        <input type="radio" name="Question11" value="1 hour" /> 1 hour<br>
        <input type="radio" name="Question11" value="24 hours" /> 24 hours<br>
        <input type="radio" name="Question11" value="72 hours" /> 72 hours
    </div>

    <div>
        <h4>What is the correct sequence for doffing PPE?</h4>
        <input type="radio" name="Question12" value="Gown-Gloves-Mask-Goggles" /> Gown → Gloves → Mask → Goggles<br>
        <input type="radio" name="Question12" value="Mask-Gown-Gloves-Goggles" /> Mask → Gown → Gloves → Goggles<br>
        <input type="radio" name="Question12" value="Gown-Mask-Goggles-Gloves" /> Gown → Mask → Goggles → Gloves<br>
        <input type="radio" name="Question12" value="Gloves-Gown-Goggles-Mask" /> Gloves → Gown → Goggles → Mask
    </div>

    <div>
        <h4>What is the primary goal of infection prevention and control (IPC) in a healthcare setting?</h4>
        <input type="radio" name="Question13" value="Reduce hospital costs" /> Reduce hospital costs<br>
        <input type="radio" name="Question13" value="Protect only healthcare workers" /> Protect only healthcare workers from infections<br>
        <input type="radio" name="Question13" value="Prevent infections" /> Prevent the spread of infections among patients, healthcare workers, and visitors<br>
        <input type="radio" name="Question13" value="Improve hospital ranking" /> Improve hospital ranking
    </div>

    <div>
        <h4>Alcohol-based hand rubbing should be done for how many seconds to be effective?</h4>
        <input type="radio" name="Question14" value="5-10 seconds" /> 5-10 seconds<br>
        <input type="radio" name="Question14" value="10-20 seconds" /> 10-20 seconds<br>
        <input type="radio" name="Question14" value="20-30 seconds" /> 20-30 seconds<br>
        <input type="radio" name="Question14" value="30-60 seconds" /> 30-60 seconds
    </div>

    <div>
        <h4>Which type of PPE is required when caring for a patient with confirmed tuberculosis?</h4>
        <input type="radio" name="Question15" value="Surgical mask" /> Surgical mask<br>
        <input type="radio" name="Question15" value="N95 respirator" /> N95 respirator<br>
        <input type="radio" name="Question15" value="Face shield only" /> Face shield only<br>
        <input type="radio" name="Question15" value="Gloves only" /> Gloves only
    </div>

    <div>
        <h4>When cohorting patients with the same suspected or confirmed diagnosis in one room, the distance must be maintained between each patient at:</h4>
        <input type="radio" name="Question16" value="1 foot" /> 1 foot<br>
        <input type="radio" name="Question16" value="2 feet" /> 2 feet<br>
        <input type="radio" name="Question16" value="3 feet" /> 3 feet (1 meter)<br>
        <input type="radio" name="Question16" value="6 feet" /> 6 feet (2 meters)
    </div>

    <div>
        <h4>Which of the following is the most effective way to prevent the spread of infections?</h4>
        <input type="radio" name="Question17" value="Wearing a mask" /> Wearing a mask at all times<br>
        <input type="radio" name="Question17" value="Hand hygiene" /> Frequent and proper hand hygiene<br>
        <input type="radio" name="Question17" value="Antibiotics" /> Using antibiotics for all patients<br>
        <input type="radio" name="Question17" value="Disinfectant spray" /> Spraying disinfectant in the air
    </div>

    <h3>Select the correct room placement for each patient (single, ward), and PPE to be used by 
        each healthcare worker based on its disease and mode of transmission [pre-pandemic]:</h3>

    <h5>
        Place the patient in the appropriate room
    </h5>

    <div>
        <h4>Measles, with active lesions</h4>
        <input type="checkbox" name="Question18" value="Single room only" /> Single room only
        <input type="checkbox" name="Question18" value="Ward type" /> Ward type
        <input type="checkbox" name="Question18" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <div>
        <h4>MRSA patient</h4>
        <input type="checkbox" name="Question19" value="Single room only" /> Single room only
        <input type="checkbox" name="Question19" value="Ward type" /> Ward type
        <input type="checkbox" name="Question19" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <div>
        <h4>Patient with Dengue Hemorrhagic Fever</h4>
        <input type="checkbox" name="Question20" value="Single room only" /> Single room only
        <input type="checkbox" name="Question20" value="Ward type" /> Ward type
        <input type="checkbox" name="Question20" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <div>
        <h4>Bacteriologically confirmed pulmonary TB with ongoing treatment of less than 14 days</h4>
        <input type="checkbox" name="Question21" value="Single room only" /> Single room only
        <input type="checkbox" name="Question21" value="Ward type" /> Ward type
        <input type="checkbox" name="Question21" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <div>
        <h4>COVID, intubated patient</h4>
        <input type="checkbox" name="Question22" value="Single room only" /> Single room only
        <input type="checkbox" name="Question22" value="Ward type" /> Ward type
        <input type="checkbox" name="Question22" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <div>
        <h4>Intubated patient, ETA positive of CRE</h4>
        <input type="checkbox" name="Question23" value="Single room only" /> Single room only
        <input type="checkbox" name="Question23" value="Ward type" /> Ward type
        <input type="checkbox" name="Question23" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <div>
        <h4>HIV patient, with CD4 count of >200t</h4>
        <input type="checkbox" name="Question24" value="Single room only" /> Single room only
        <input type="checkbox" name="Question24" value="Ward type" /> Ward type
        <input type="checkbox" name="Question24" value="AIIR or Isolation room" />AIIR or Isolation room
    </div>

    <h5>
        Check the PPE required for each patient based on your risk assessment 9pts
    </h5>

    <div>
        <h4>Hepatitis B patient for blood extraction</h4>
        <input type="checkbox" name="Question25" value="Gloves" /> Gloves
        <input type="checkbox" name="Question25" value="Isolation Gown" /> Isolation Gown
        <input type="checkbox" name="Question25" value="Mask" /> Mask
        <input type="checkbox" name="Question25" value="Respirator or N95" /> Respirator or N95
        <input type="checkbox" name="Question25" value="Face/Eye Protection" /> Face/Eye Protection
    </div>

    <div>
        <h4>Vital signs taking for a Post KT patient</h4>
        <input type="checkbox" name="Question26" value="Gloves" /> Gloves
        <input type="checkbox" name="Question26" value="Isolation Gown" /> Isolation Gown
        <input type="checkbox" name="Question26" value="Mask" /> Mask
        <input type="checkbox" name="Question26" value="Respirator or N95" /> Respirator or N95
        <input type="checkbox" name="Question26" value="Face/Eye Protection" /> Face/Eye Protection
    </div>

    <div>
        <h4>Blood extraction in a patient with VRE</h4>
        <input type="checkbox" name="Question27" value="Gloves" /> Gloves
        <input type="checkbox" name="Question27" value="Isolation Gown" /> Isolation Gown
        <input type="checkbox" name="Question27" value="Mask" /> Mask
        <input type="checkbox" name="Question27" value="Respirator or N95" /> Respirator or N95
        <input type="checkbox" name="Question27" value="Face/Eye Protection" /> Face/Eye Protection
    </div>

    <div>
        <h4>Intubating pneumonia patient</h4>
        <input type="checkbox" name="Question28" value="Gloves" /> Gloves
        <input type="checkbox" name="Question28" value="Isolation Gown" /> Isolation Gown
        <input type="checkbox" name="Question28" value="Mask" /> Mask
        <input type="checkbox" name="Question28" value="Respirator or N95" /> Respirator or N95
        <input type="checkbox" name="Question28" value="Face/Eye Protection" /> Face/Eye Protection
    </div>

    <div>
        <h4>Post HSCT patient with fever</h4>
        <input type="checkbox" name="Question29" value="Gloves" /> Gloves
        <input type="checkbox" name="Question29" value="Isolation Gown" /> Isolation Gown
        <input type="checkbox" name="Question29" value="Mask" /> Mask
        <input type="checkbox" name="Question29" value="Respirator or N95" /> Respirator or N95
        <input type="checkbox" name="Question29" value="Face/Eye Protection" /> Face/Eye Protection
    </div>


    <button type="submit">Submit</button>
</form>