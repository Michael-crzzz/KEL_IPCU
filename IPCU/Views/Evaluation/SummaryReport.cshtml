@model List<IPCU.Models.EvaluationSummaryViewModel>

@{
    ViewData["Title"] = "Evaluation Summary Report";
}

<h2>Evaluation Summary Report</h2>

<a asp-action="ExportToExcel" class="btn btn-primary">Export to Excel Summary Report</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date of Training</th>
            <th>Total Participants</th>
            <th>Final Rating</th>
            <th>Post Test Grade</th>
            <th>Venue</th>
            <th>SME Lecturer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TrainingDate.ToString("MMMM dd, yyyy")</td>
                <td>@item.TotalParticipants</td>
                <td>@item.FinalRating.ToString("0.00")</td>
                <td>@(item.PostTestEvaluationGrade.HasValue ? item.PostTestEvaluationGrade.Value.ToString("0.00") : "N/A")</td>
                <td>@item.Venue</td>
                <td>@item.SMELecturer</td>
                <td>
                    <!-- Button to generate PDF for this specific row -->
                    <a asp-action="GeneratePdf" asp-route-id="@item.TrainingDate.ToString("yyyyMMdd")" class="btn btn-primary">Download PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
