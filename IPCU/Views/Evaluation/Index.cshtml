@model IEnumerable<IPCU.Models.EvaluationViewModel>

@{
    ViewData["Title"] = "Training Evaluations";
}

<div class="container my-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Training Evaluations</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-white sticky-top">
                <tr>
                    <th>Email</th>
                    <th>Training Date</th>
                    <th>Venue</th>
                    <th>Service Classification</th>
                    <th>SME Lecturer</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.TrainingDate.ToShortDateString()</td>
                        <td>@item.Venue</td>
                        <td>@item.ServiceClassification</td>
                        <td>@item.SMELecturer</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
