@{
    ViewData["Title"] = "Exam Instructions";
}

<!-- Bootstrap Icons (Ensure Bootstrap 5 is included in your project) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 600px;">
        <div class="card-body text-center">
            <h3 class="card-title fw-bold"><i class="bi bi-journal-text"></i> Exam Instructions</h3>
            <p class="text-muted">Please read these instructions carefully before starting.</p>
            <hr>
            <ul class="list-group list-group-flush text-start">
                <li class="list-group-item"><i class="bi bi-clock text-primary"></i> <strong>Duration:</strong> 30 minutes to complete the test.</li>
                <li class="list-group-item"><i class="bi bi-list-check text-success"></i> <strong>Questions:</strong> 20 questions.</li>
                <li class="list-group-item"><i class="bi bi-star text-warning"></i> <strong>Points:</strong> Each question is worth 1 point. Total possible score is 20.</li>
                <li class="list-group-item"><i class="bi bi-shield-lock text-secondary"></i> <strong>Integrity:</strong> No external help allowed.</li>
            </ul>

            <hr>
            <p class="fw-bold text-success">Click "Start Exam" when you're ready. Good luck! 🍀</p>

            <a asp-controller="Test" asp-action="PostExamNonClinicals" class="btn btn-primary btn-lg w-100">
                <i class="bi bi-play-circle"></i> Start Exam
            </a>
        </div>
    </div>
</div>
