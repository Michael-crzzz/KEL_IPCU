@model IPCU.Controllers.HandHygieneFormsController.HHMonthlySummaryViewModel
@{
    ViewData["Title"] = "Monthly Hand Hygiene Compliance Summary";
}

<div class="container">
    <h2>Hand Hygiene Compliance Summary - @Model.Month</h2>

    <!-- Month selector -->
    <form asp-action="MonthlySummary" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="month" name="date" class="form-control"
                           value="@DateTime.Parse(Model.Month).ToString("yyyy-MM")" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">View Month</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (ViewBag.NoData != null)
    {
        <div class="alert alert-info">
            @ViewBag.NoData
        </div>
    }
    else
    {
        <!-- Overall Summary Card -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4>Overall Compliance</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2 class="mb-0">@Model.OverallSummary.ComplianceRateFormatted</h2>
                                <p class="text-muted">Compliance Rate</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2 class="mb-0">@Model.OverallSummary.TotalCompliantActions</h2>
                                <p class="text-muted">Compliant Actions</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2 class="mb-0">@Model.OverallSummary.TotalObservedOpportunities</h2>
                                <p class="text-muted">Total Opportunities</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- All Professions by Area Section -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h4>Compliance by Area (All Professions)</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Area</th>
                                <th>Compliant Actions</th>
                                <th>Total Opportunities</th>
                                <th>Compliance Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var area in Model.AreaSummaries)
                            {
                                <tr>
                                    <td>@area.Area</td>
                                    <td>@area.TotalCompliantActions</td>
                                    <td>@area.TotalObservedOpportunities</td>
                                    <td>@area.ComplianceRateFormatted</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Nurses by Area Section -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h4>Nurse Compliance by Area</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Area</th>
                                <th>Compliant Actions</th>
                                <th>Total Opportunities</th>
                                <th>Compliance Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.NurseAreaSummaries.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center">No nurse data available for this month</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var area in Model.NurseAreaSummaries)
                                {
                                    <tr>
                                        <td>@area.Area</td>
                                        <td>@area.TotalCompliantActions</td>
                                        <td>@area.TotalObservedOpportunities</td>
                                        <td>@area.ComplianceRateFormatted</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Profession Summary Section -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h4>Compliance by Profession</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Profession</th>
                                <th>Compliant Actions</th>
                                <th>Total Opportunities</th>
                                <th>Compliance Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var profession in Model.ProfessionSummaries)
                            {
                                <tr>
                                    <td>@profession.Profession</td>
                                    <td>@profession.TotalCompliantActions</td>
                                    <td>@profession.TotalObservedOpportunities</td>
                                    <td>@profession.ComplianceRateFormatted</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Observer Summary Section -->
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h4>Compliance by Observer</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Observer</th>
                                <th>Compliant Actions</th>
                                <th>Total Opportunities</th>
                                <th>Compliance Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var observer in Model.ObserverSummaries)
                            {
                                <tr>
                                    <td>@observer.Observer</td>
                                    <td>@observer.TotalCompliantActions</td>
                                    <td>@observer.TotalObservedOpportunities</td>
                                    <td>@observer.ComplianceRateFormatted</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="text-center mb-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>