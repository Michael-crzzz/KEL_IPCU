                    $(this).closest('.activity-item').remove();
                    
                    // Re-index the remaining activities
                    $('.activity-item').each(function(index) {
                        const oldIndex = $(this).find('[name^="Activities["]').first().attr('name').match(/\[(\d+)\]/)[1];
                        
                        // Update all input names and IDs
                        $(this).find('[name^="Activities["]').each(function() {
                            const newName = $(this).attr('name').replace(`[${oldIndex}]`, `[${index}]`);
                            $(this).attr('name', newName);
                        });
                        
                        $(this).find('[id^="Activities_"]').each(function() {
                            const newId = $(this).attr('id').replace(`_${oldIndex}__`, `_${index}__`);
