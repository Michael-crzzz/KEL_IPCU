                                    @for (int j = 1; j <= 2; j++)
                                    {
                                        <div class="border p-2 rounded">
                                            <div class="fw-bold mb-1">Number @j</div>
                                            <div class="btn-group" role="group">
                                                <input type="radio" class="btn-check" 
