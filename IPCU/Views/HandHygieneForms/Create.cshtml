@model IPCU.Models.HandHygieneForm

@{
    ViewData["Title"] = "Create Hand Hygiene Form";
}

<!-- Bootstrap & Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<h2 class="mb-4">Create Hand Hygiene Form</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Hidden Input for HHId -->
<input asp-for="HHId" type="hidden" />


    <h3>Basic Information</h3>
    <hr />
    <div class="form-group">
        <label asp-for="Area" class="form-label"></label>
        <input asp-for="Area" class="form-control" required />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observer" class="form-label"></label>
        <input asp-for="Observer" class="form-control" required />
        <span asp-validation-for="Observer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time" class="form-label"></label>
        <input asp-for="Time" type="time" class="form-control" required />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HCWType" class="form-label"></label>
        <input asp-for="HCWType" class="form-control" required />
        <span asp-validation-for="HCWType" class="text-danger"></span>
    </div>

    <h3>Isolation Information</h3>
    <hr />
    <div class="form-check">
        <input asp-for="Isolation" type="checkbox" class="form-check-input" />
        <label class="form-check-label">Isolation Observed?</label>
    </div>

    <div class="form-group">
        <label asp-for="IsolationPrecaution" class="form-label"></label>
        <input asp-for="IsolationPrecaution" class="form-control" />
        <span asp-validation-for="IsolationPrecaution" class="text-danger"></span>
    </div>

    <h3>Observation Details</h3>
    <hr />
    <div class="form-group">
        <label asp-for="ObsvPatientCare" class="form-label"></label>
        <input asp-for="ObsvPatientCare" class="form-control" required />
        <span asp-validation-for="ObsvPatientCare" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ObsvPatientEnvironment" class="form-label"></label>
        <input asp-for="ObsvPatientEnvironment" class="form-control" required />
        <span asp-validation-for="ObsvPatientEnvironment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ObsvPatientContact" class="form-label"></label>
        <input asp-for="ObsvPatientContact" class="form-control" required />
        <span asp-validation-for="ObsvPatientContact" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Form</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</form>
}
