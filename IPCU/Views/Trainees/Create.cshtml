@model IPCU.Models.Trainee

@{
    ViewData["Title"] = "Create New Trainee";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-user-plus"></i> Create New Trainee</h2>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="fw-bold"></label>
                            <input asp-for="FullName" class="form-control shadow-sm" required />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Sex" class="fw-bold"></label>
                            <select asp-for="Sex" class="form-control shadow-sm" required>
                                <option value="" disabled selected>Select Option</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Department" class="fw-bold"></label>
                            <input asp-for="Department" class="form-control shadow-sm" required />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="N95" class="fw-bold"></label>
                            <input asp-for="N95" class="form-control shadow-sm" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IDPrinting" class="fw-bold"></label>
                            <select asp-for="IDPrinting" class="form-control shadow-sm">
                                <option value="" disabled selected>Select Option</option>
                                <option value="Done">Done</option>
                                <option value="Pending">Pending</option>
                                <option value="Certificate">Certificate</option>
                            </select>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="BasicInfection" class="fw-bold"></label>
                            <input asp-for="BasicInfection" class="form-control shadow-sm" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProperHand" class="fw-bold"></label>
                            <input asp-for="ProperHand" class="form-control shadow-sm" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="GloveRemoval" class="fw-bold"></label>
                            <select asp-for="GloveRemoval" class="form-control shadow-sm">
                                <option value="" disabled selected>Select Option</option>
                                <option value="PASSED">PASSED</option>
                                <option value="W/POWDER">W/POWDER</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PreTestScore" class="fw-bold"></label>
                            <input asp-for="PreTestScore" type="number" class="form-control shadow-sm" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PostTestScore" class="fw-bold"></label>
                            <input asp-for="PostTestScore" type="number" class="form-control shadow-sm" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Rate" class="fw-bold"></label>
                            <input asp-for="Rate" type="number" step="0.01" class="form-control shadow-sm" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TrainingReport" class="fw-bold"></label>
                            <textarea asp-for="TrainingReport" class="form-control shadow-sm" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Buttons Section -->
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <a asp-action="Index" class="btn btn-secondary px-4 py-2 shadow-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>

                    <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm">
                        <i class="fas fa-check"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
