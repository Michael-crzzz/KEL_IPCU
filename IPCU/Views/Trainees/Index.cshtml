@model IEnumerable<IPCU.Models.Trainee>

@{
    ViewData["Title"] = "Trainees List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">

<div class="container mt-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary fw-bold"><i class="fas fa-users"></i> Trainees Attendance List</h1>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4 py-2">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <!-- Table Section -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow rounded-3">
            <thead class="table-dark text-white text-center align-middle">
                <tr>
                    <th style="white-space: nowrap;">Full Name</th>
                    <th>Sex</th>
                    <th>Department</th>
                    <th>N95</th>
                    <th>ID Printing</th>
                    <th>Basic Infection</th>
                    <th>Proper Hand</th>
                    <th>Glove Removal</th>
                    <th>Pre Test</th>
                    <th>Post Test</th>
                    <th>Rate</th>
                    <th>Training Report</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle text-nowrap">@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Sex)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Department)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.N95)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.IDPrinting)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.BasicInfection)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.ProperHand)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.GloveRemoval)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.PreTestScore)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.PostTestScore)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Rate)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.TrainingReport)</td>

                        <!-- Action Buttons 
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>-->



                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-trash-alt"></i>
                                </a>                 
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
