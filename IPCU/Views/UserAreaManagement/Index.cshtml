@model List<IPCU.Models.UserAreaViewModel>
@{
    ViewData["Title"] = "User Area Management";
}

<div class="container my-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0"><i class="fas fa-users-cog me-2 text-primary"></i>User Area Management</h3>
                <a asp-action="BatchAssignAreas" class="btn btn-outline-primary">
                    <i class="fas fa-tasks me-1"></i> Batch Assign Areas
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-user"></i> Username</th>
                                <th><i class="fas fa-id-card"></i> Full Name</th>
                                <th><i class="fas fa-envelope"></i> Email</th>
                                <!-- <th><i class="fas fa-map-marker-alt"></i> Assigned Area</th>-->
                                <th class="text-center"><i class="fas fa-cogs"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                   <!-- <td>
                                        @if (string.IsNullOrEmpty(user.AssignedArea))
                                        {
                                            <span class="badge bg-secondary">Not Assigned</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@user.AssignedArea</span>
                                        }
                                     </td>-->
                                    <td class="text-center">
                                        <a asp-action="AssignArea" asp-route-userId="@user.UserId" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-edit me-1"></i> Assign
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-circle me-2"></i>No users found for area assignment.
                </div>
            }
        </div>
    </div>
</div>
