@model IPCU.Models.Patient

@{
    ViewData["Title"] = "Create Patient";
}

<h1>Create Patient</h1>

<h4>Patient Information</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <fieldset>
                <legend>Patient Details</legend>

                <div class="form-group">
                    <label asp-for="HospNum" class="col-form-label"></label>
                    <input asp-for="HospNum" class="form-control" />
                    <span asp-validation-for="HospNum" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdNum" class="col-form-label"></label>
                    <input asp-for="IdNum" class="form-control" />
                    <span asp-validation-for="IdNum" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AdmType" class="col-form-label"></label>
                    <input asp-for="AdmType" class="form-control" />
                    <span asp-validation-for="AdmType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AdmLocation" class="col-form-label"></label>
                    <input asp-for="AdmLocation" class="form-control" />
                    <span asp-validation-for="AdmLocation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AdmDate" class="col-form-label"></label>
                    <input asp-for="AdmDate" type="date" class="form-control" />
                    <span asp-validation-for="AdmDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="col-form-label"></label>
                    <input asp-for="Age" type="number" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RoomID" class="col-form-label"></label>
                    <input asp-for="RoomID" class="form-control" />
                    <span asp-validation-for="RoomID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeathType" class="col-form-label"></label>
                    <input asp-for="DeathType" class="form-control" />
                    <span asp-validation-for="DeathType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmailAddress" class="col-form-label"></label>
                    <input asp-for="EmailAddress" type="email" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeathDate" class="col-form-label"></label>
                    <input asp-for="DeathDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="DeathDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateCreated" class="col-form-label"></label>
                    <input asp-for="DateCreated" type="datetime-local" class="form-control" />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>
            </fieldset>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
