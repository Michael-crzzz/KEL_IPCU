@model IEnumerable<IPCU.Models.InfectionControl.Models.InfectionControlMonitoringForm>

@{
    ViewData["Title"] = "Infection Control Monitoring Form Table";
}

<h2 class="text-center mb-4 p-3 bg-primary text-white rounded shadow-sm">@ViewData["Title"]</h2>
<h2>Environmental Checklist for Station: @ViewBag.Station</h2>

<!-- Create Button -->
<div class="text-end mb-3">
    <a href="@Url.Action("Index", "InfectionControlMonitoringForms", new { stationId = ViewBag.StationID, station = ViewBag.Station })" class="btn btn-primary btn-lg">
        Create New Form
    </a>

</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee ID</th>
            <th>Area/Unit</th>
            <th>Date and Time of Monitoring</th>
            <th>Assessed By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AreaOrUnit</td>
                <td>@item.DateAndTimeOfMonitoring</td>
                <td>@item.AssessedBy</td>
                <td>
                    <div class="d-flex justify-content-around">
                        <a href="@Url.Action("Edit", "InfectionControlMonitoringForms", new { id = item.Id })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "InfectionControlMonitoringForms", new { id = item.Id })" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
