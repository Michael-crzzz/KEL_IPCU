@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<!-- Main Content -->
<div class="container mt-5 text-center">
    <h1 class="display-4 text-primary fw-bold">Welcome to IPCU System</h1>
    <p class="lead">Manage Patients & Hospital Records Efficiently</p>

    <!-- Three Cards Section -->
    <div class="row mt-5 justify-content-center">
        <!-- View Patients Card -->
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-eye fa-3x text-primary"></i>
                    <h5 class="card-title mt-3">View Patients</h5>
                    <p class="card-text">View the list of all registered patients.</p>
                    <a asp-controller="PatientForm" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fa fa-arrow-right"></i> View Patients
                    </a>
                </div>
            </div>
        </div>

        <!-- Create Patient Card 
  <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-user-plus fa-3x text-success"></i>
                    <h5 class="card-title mt-3">Create Patient Form</h5>
                    <p class="card-text">Create a Patient Form in the system.</p>
                    <a asp-controller="PatientForm" asp-action="Create" class="btn btn-outline-success">
                        <i class="fa fa-arrow-right"></i> Add Patient
                    </a>
                </div>
            </div>
        </div>-->

        <!-- Training Summary Form Card -->
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-dumbbell fa-3x text-success"></i> <!-- Barbell Icon -->
                    <h5 class="card-title mt-3">Training Summary Form</h5>
                    <p class="card-text">View or Fill out the Training Summary form.</p>
                    <a asp-controller="TrainingSummary" asp-action="Index" class="btn btn-outline-success">
                        <i class="fa fa-arrow-right"></i> Open Form
                    </a>
                </div>
            </div>
        </div>
        <!-- Hand Hygiene Form Card -->
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-hands-wash fa-3x text-success"></i> <!-- Hand Hygiene Icon -->
                    <h5 class="card-title mt-3">Hand Hygiene Form</h5>
                    <p class="card-text">View or Fill out the Hand Hygiene Form.</p> 
                    <a asp-controller="HandHygieneForms" asp-action="Index" class="btn btn-outline-success">
                        <i class="fa fa-arrow-right"></i> Open Form
                    </a>
                    <a class="nav-link" asp-controller="HandHygieneForms" asp-action="MonthlySummary">Monthly Compliance Summary</a>
                </div>
            </div>
        </div>

        <!-- Fit Testing Form Card -->
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-file-medical fa-3x text-success"></i> <!-- Barbell Icon -->
                    <h5 class="card-title mt-3">Fit Testing Form</h5>
                    <p class="card-text">View or Fill out the Fit Testing Form</p>
                    <a asp-controller="FitTestingForm" asp-action="Index" class="btn btn-outline-success">
                        <i class="fa fa-arrow-right"></i> Open Form
                    </a>
                    <a asp-controller="FitTestingForm" asp-action="Reports" class="btn btn-outline-success">
                        <i class="fa fa-arrow-right"></i> Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
