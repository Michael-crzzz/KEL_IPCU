@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<!-- Navigation Bar -->


<!-- Main Content -->
<div class="container mt-5 text-center">
    <h1 class="display-4 text-primary fw-bold">Welcome to IPCU System</h1>
    <p class="lead">Manage Patients & Hospital Records Efficiently</p>

    <p>
        <a asp-controller="PatientForm" asp-action="Index" class="btn btn-lg btn-primary">
            <i class="fa fa-eye"></i> View Patients
        </a>
    </p>

    <!-- Three Cards Section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-user-md fa-3x text-primary"></i>
                    <h5 class="card-title mt-3">Manage Patients</h5>
                    <p class="card-text">Keep track of patient records efficiently.</p>
                    <a asp-controller="PatientForm" asp-action="Index" class="btn btn-outline-primary">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-procedures fa-3x text-success"></i>
                    <h5 class="card-title mt-3">ICU Management</h5>
                    <p class="card-text">Monitor and manage ICU patients with ease.</p>
                    <a asp-controller="Ipcu" asp-action="Index" class="btn btn-outline-success">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <div class="card-body text-center">
                    <i class="fa fa-file-medical fa-3x text-danger"></i>
                    <h5 class="card-title mt-3">Privacy Policy</h5>
                    <p class="card-text">Understand how we protect patient data.</p>
                    <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-danger">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
