@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient">Welcome to IPCU System</h1>
        <p class="lead text-muted">Efficiently managing Employee Forms & Trainings.</p>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- View Patients -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-primary mb-3">
                        <i class="fas fa-user-injured fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">View Patients</h5>
                    <p class="text-muted">View all registered patients efficiently.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Patients" asp-action="Index" class="btn btn-primary">Patient</a>
                        <a asp-controller="PatientMasters" asp-action="Index" class="btn btn-outline-primary">Master</a>
                    
                    </div>
                </div>
            </div>
        </div>

        <!-- Training Summary -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-warning mb-3">
                        <i class="fas fa-chalkboard-teacher fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">Training Summary</h5>
                    <p class="text-muted">Summarize assessment reports.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Evaluation" asp-action="SummaryReport" class="btn btn-warning text-white">Summary</a>
                        <a asp-controller="TrainingSummary" asp-action="Reports" class="btn btn-outline-success">Report</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hand Hygiene -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-success mb-3">
                        <i class="fas fa-hands-wash fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">Hand Hygiene</h5>
                    <p class="text-muted">Track hygiene compliance records.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="HandHygieneForms" asp-action="Index" class="btn btn-success">Open Form</a>
                        <a asp-controller="HandHygieneForms" asp-action="MonthlySummary" class="btn btn-outline-success">Summary</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Fit Testing -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-purple mb-3">
                        <i class="fas fa-mask-face fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">Fit Testing Form</h5>
                    <p class="text-muted">Fill out or view Fit Testing forms.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="FitTestingForm" asp-action="Index" class="btn btn-purple text-white">Open Form</a>
                        <a asp-controller="FitTestingForm" asp-action="Reports" class="btn btn-outline-success">Reports</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Role Management -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-danger mb-3">
                        <i class="fas fa-user-shield fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">Role Management</h5>
                    <p class="text-muted">Manage user roles & permissions.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="RoleManagement" asp-action="Index" class="btn btn-danger">Roles</a>
                        <a asp-controller="RoleManagement" asp-action="UserRoles" class="btn btn-outline-danger">Users</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Area Management -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-teal mb-3">
                        <i class="fas fa-map-marker-alt fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">User Area Management</h5>
                    <p class="text-muted">Assign & manage user work areas.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="UserAreaManagement" asp-action="Index" class="btn btn-teal">Manage Areas</a>
                        <a asp-controller="UserAreaManagement" asp-action="BatchAssignAreas" class="btn btn-outline-teal">Batch Assign</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- HAI Management -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-indigo mb-3">
                        <i class="fas fa-virus fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">HAI Records</h5>
                    <p class="text-muted">Manage infection control records.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="DashboardHAI" asp-action="Index" class="btn btn-indigo">Open Form</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- ICN Patient Management -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-info mb-3">
                        <i class="fas fa-hospital-user fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">ICN Patient Management</h5>
                    <p class="text-muted">Track ICN patients efficiently.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="ICNPatient" asp-action="Index" class="btn btn-info text-white">View Patients</a>
                        <a asp-controller="ICNPatient" asp-action="Details" class="btn btn-outline-info">Patient Details</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Notice of Referral -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-warning mb-3">
                        <i class="fas fa-chalkboard-teacher fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">Notice Of Referrals</h5>
                    <p class="text-muted">Summarize assessment reports.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="NoticeOfReferrals" asp-action="Index" class="btn btn-warning text-white">Index</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- ICRA Management -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-lg rounded-4">
                <div class="card-body text-center">
                    <div class="icon-box bg-info mb-3">
                        <i class="fas fa-hospital-user fa-2x text-white"></i>
                    </div>
                    <h5 class="fw-bold">ICRA Dashboard</h5>
                    <p class="text-muted">Manage ICRA.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="ICRAs" asp-action="Index" class="btn btn-info text-white">View ICRA</a>
                    </div>
                    <div class="d-grid gap-2">
                        @if (User.IsInRole("Admin") & User.IsInRole("ICN") & User.IsInRole("Engineering"))
                        {
                            <a asp-controller="ICRADashboard" asp-action="AdminICN" class="btn btn-info text-white">View Admin/ICN Dashboard</a>
                            <a asp-controller="ICRADashboard" asp-action="Engineering" class="btn btn-info text-white">View Engineering Dashboard</a>
                        }
                        else if (User.IsInRole("Engineering"))
                        {
                            <a asp-controller="ICRADashboard" asp-action="Engineering" class="btn btn-info text-white">View Engineering Dashboard</a>
                        }
                        else if (User.IsInRole("Admin") || User.IsInRole("ICN"))
                        {
                            <a asp-controller="ICRADashboard" asp-action="AdminICN" class="btn btn-info text-white">View Admin/ICN Dashboard</a>
                        }
                        else
                        {
                            <a asp-controller="ICRAs" asp-action="Index" class="btn btn-info text-white">View ICRA</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(to right, #4facfe, #00f2fe);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .bg-purple {
        background-color: #6f42c1;
    }

    .btn-purple {
        background-color: #6f42c1;
        border-color: #6f42c1;
    }

        .btn-purple:hover {
            background-color: #5a32a3;
            border-color: #5a32a3;
        }

    .bg-teal {
        background-color: #20c997;
    }

    .btn-teal {
        background-color: #20c997;
        border-color: #20c997;
        color: white;
    }

    .btn-outline-teal {
        color: #20c997;
        border-color: #20c997;
    }

        .btn-outline-teal:hover {
            background-color: #20c997;
            color: white;
        }

    .bg-indigo {
        background-color: #6610f2;
    }

    .btn-indigo {
        background-color: #6610f2;
        border-color: #6610f2;
        color: white;
    }


</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
