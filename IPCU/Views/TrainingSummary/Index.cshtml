@model IEnumerable<IPCU.Models.TrainingEvaluation>

@{
    ViewData["Title"] = "Training Summary";
}

<!-- Bootstrap & Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary"><i class="fas fa-clipboard-list"></i> Training Summary Form</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>
    <p class="text-muted">A summary of all training sessions conducted.</p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Title</th>
                    <th>Venue</th>
                    <th>Date</th>
                    <th>Methodology</th>
                    <th>Category</th>
                    <th>Male Participants</th>
                    <th>Female Participants</th>
                    <th>Post-Test Grade</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Venue</td>
                        <td>@item.DateOfTraining.ToString("yyyy-MM-dd")</td>
                        <td>@item.TrainingMethodology</td>
                        <td>@item.ProfessionalCategory</td>
                        <td class="text-center">@item.TotalParticipantsMale</td>
                        <td class="text-center">@item.TotalParticipantsFemale</td>
                        <td class="text-center">@item.PostTestEvaluationGrade</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <!-- Edit Button -->
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" title="Edit Training">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <!-- Details Button -->
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <!-- Delete Button -->
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Delete Training">
                                    <i class="fas fa-trash-alt"></i>
                                </a>

                                <!-- Preview PDF Button -->
                                <a asp-action="GeneratePdf" asp-route-id="@item.Id" class="btn btn-primary btn-sm" target="_blank" data-bs-toggle="tooltip" title="Preview as PDF">
                                    <i class="fas fa-file-pdf"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





















