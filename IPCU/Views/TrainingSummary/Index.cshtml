@using X.PagedList.Mvc.Core
@model IPagedList<IPCU.Models.EvaluationSummary>

@{
    ViewData["Title"] = "Training Summary";
}

<!-- Bootstrap, Font Awesome, Animate.css & AOS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center animate__animated animate__fadeInDown">
        <h2 class="text-primary"><i class="fas fa-clipboard-list"></i> Training Summary</h2>
        <a asp-action="Create" class="btn btn-success animate__animated animate__pulse animate__infinite">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <p class="text-muted animate__animated animate__fadeInUp">A summary of all training sessions conducted.</p>

    <!-- 🔹 Filtering Form -->
    <form asp-action="Index" method="get" class="row g-3 mb-4 p-3 bg-light rounded shadow-sm" data-aos="fade-up">
        <div class="col-md-3">
            <label class="form-label">Venue</label>
            <input type="text" name="searchVenue" value="@Context.Request.Query["searchVenue"]" class="form-control">
        </div>
        <div class="col-md-3">
            <label class="form-label">Date</label>
            <input type="date" name="searchDate" value="@Context.Request.Query["searchDate"]" class="form-control">
        </div>
        <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Filter</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-times"></i> Clear</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover shadow-sm" data-aos="fade-up">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Date</th>
                    <th>Venue</th>
                    <th>Male Participants</th>
                    <th>Female Participants</th>
                    <th>Total Participants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-aos="fade-up">
                        <td>@item.TrainingDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Venue</td>
                        <td class="text-center">@item.MaleCount</td>
                        <td class="text-center">@item.FemaleCount</td>
                        <td class="text-center">@(item.MaleCount + item.FemaleCount)</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@item.TrainingDate" class="btn btn-info btn-sm animate__animated animate__zoomIn">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a asp-action="GeneratePdf" asp-route-id="@item.TrainingDate" class="btn btn-primary btn-sm animate__animated animate__zoomIn" target="_blank">
                                    <i class="fas fa-file-pdf"></i> Export PDF
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination Controls -->
    @if (Model.PageCount > 1)
    {
        <nav aria-label="Training Summary Pagination" data-aos="fade-up">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" aria-label="Previous">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" aria-label="Next">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Include AOS and Init Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init({
        duration: 800, // Animation duration
        once: true // Only animate once
    });
</script>
