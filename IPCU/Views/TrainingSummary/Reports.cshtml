@model List<IPCU.Models.TrainingSummary>

@{
    ViewData["Title"] = "Training Summary Reports";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>Training Summary Reports</h2>
<a asp-controller="TrainingSummary" asp-action="ExportToExcel" class="btn btn-success">
    Export to Excel
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Employee ID</th>
            <th>Age Group</th>
            <th>Department</th>
            <th>Respiratory Type</th>
            <th>Score</th>
            <th>Pre-test</th>
            <th>Score</th>
            <th>Post-test</th>
            <th>Rate</th>
            <th>Proper Hand</th>
            <th>Glove Removal</th>
            <th>ID Printing</th>
            <th>Training Report</th>
            <th>Basic Infection</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.EmployeeId</td>
                <td>@item.AgeGroup</td>
                <td>@item.Department</td>
                <td>@(string.IsNullOrEmpty(item.Respiratory_Type) ? "N/A" : item.Respiratory_Type)</td>
                <td>@item.PreScore</td>
                <td>@item.PreScore_Total</td>
                <td>@item.PostScore</td>
                <td>@item.PostScore_Total</td>
                <td>@(item.Rate + "%")</td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#actionModal"
                            data-id="@item.Id" data-action="Proper Hand">
                        @if (!string.IsNullOrEmpty(item.ProperHand))
                        {
                            <span>@item.ProperHand</span>
                        }
                        else
                        {
                            <span>Select</span>
                        }
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#actionModal"
                            data-id="@item.Id" data-action="Glove Removal">
                        @if (!string.IsNullOrEmpty(item.GloveRemoval))
                        {
                            <span>@item.GloveRemoval</span>
                        }
                        else
                        {
                            <span>Select</span>
                        }
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#actionModal"
                            data-id="@item.Id" data-action="ID Printing">
                        @if (!string.IsNullOrEmpty(item.IDPrinting))
                        {
                            <span>@item.IDPrinting</span>
                        }
                        else
                        {
                            <span>Select</span>
                        }
                    </button>
                </td>
                <td>
                    <form asp-action="UpdateTrainingReport" asp-controller="TrainingSummary" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <select name="TrainingReport" class="form-select" onchange="this.form.submit()">
                            <option value="Not Yet" selected="@("Not Yet" == item.TrainingReport)">Not Yet</option>
                            <option value="Done" selected="@("Done" == item.TrainingReport)">Done</option>
                        </select>
                    </form>
                </td>
                <td>@item.DateCreated.ToString("MMMM dd, yyyy")</td> <!-- Moved Date Created inside row -->
            </tr>
        }
    </tbody>

</table>


<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="actionModalLabel">Select an Option</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="actionForm" method="post" action="@Url.Action("SaveActionSelection", "TrainingSummary")">
                    <input type="hidden" id="trainingId" name="id" />
                    <input type="hidden" id="actionType" name="actionType" />

                    <p><strong>Action Type:</strong> <span id="modalActionType"></span></p>

                    <label for="actionOption">Select Option:</label>
                    <select class="form-select" name="selectedOption" id="actionOption">
                        <option value="Pass">Pass</option>
                        <option value="Fail">Fail</option>
                    </select>

                    <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var actionModal = document.getElementById("actionModal");

        actionModal.addEventListener("show.bs.modal", function(event) {
            var button = event.relatedTarget;
            var id = button.getAttribute("data-id");
            var actionType = button.getAttribute("data-action");

            document.getElementById("trainingId").value = id;
            document.getElementById("actionType").value = actionType;
            document.getElementById("modalActionType").textContent = actionType;
        });
    });
</script>
