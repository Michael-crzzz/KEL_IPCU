@model IPCU.Models.TrainingEvaluation

@{
    ViewData["Title"] = "Create Training Evaluation";
}

<!-- Bootstrap & Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Training Evaluation Form</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Training Information -->
                <h4 class="text-secondary">Training Information</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter training title" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Venue" class="control-label"></label>
                            <input asp-for="Venue" class="form-control" placeholder="Enter venue" required />
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DateOfTraining" class="control-label"></label>
                            <input asp-for="DateOfTraining" type="date" class="form-control" required />
                            <span asp-validation-for="DateOfTraining" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TrainingMethodology" class="control-label"></label>
                            <input asp-for="TrainingMethodology" class="form-control" placeholder="Enter methodology" required />
                            <span asp-validation-for="TrainingMethodology" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProfessionalCategory" class="control-label"></label>
                            <input asp-for="ProfessionalCategory" class="form-control" placeholder="Enter category" required />
                            <span asp-validation-for="ProfessionalCategory" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <!-- Participants Information -->
                <h4 class="text-secondary mt-4">Participants Information</h4>
                <hr />
                <div class="row">
                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="TotalParticipantsMale" class="control-label"></label>
                            <input asp-for="TotalParticipantsMale" type="number" class="form-control" min="0" required />
                            <span asp-validation-for="TotalParticipantsMale" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="TotalParticipantsFemale" class="control-label"></label>
                            <input asp-for="TotalParticipantsFemale" type="number" class="form-control" min="0" required />
                            <span asp-validation-for="TotalParticipantsFemale" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Training Evaluation -->
                <h4 class="text-secondary mt-4">Post Test Evaluation</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PostTestEvaluationGrade" class="control-label"></label>
                            <input asp-for="PostTestEvaluationGrade" class="form-control" placeholder="Enter grade" required />
                            <span asp-validation-for="PostTestEvaluationGrade" class="text-danger"></span>
                        </div>
                    </div>
                 </div>

                <!-- Final Rating Field -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FinalRating" class="control-label">Final Rating</label>
                        <input asp-for="FinalRating" type="number" step="0.01" class="form-control" placeholder="Enter final rating" required />
                        <span asp-validation-for="FinalRating" class="text-danger"></span>
                    </div>
                </div>
       
                <h4 class="text-secondary mt-4">Program Facilitation</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FlowFollowed" class="control-label">Flow was Followed</label>
                            <input asp-for="FlowFollowed" class="form-control" placeholder="Enter flow followed" required />
                            <span asp-validation-for="FlowFollowed" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RulesEstablished" class="control-label">Rules Clearly Established</label>
                            <input asp-for="RulesEstablished" class="form-control" placeholder="Enter rules established" required />
                            <span asp-validation-for="RulesEstablished" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="InitiateDiscussion" class="control-label">Ability to Initiate Discussion</label>
                            <input asp-for="InitiateDiscussion" class="form-control" placeholder="Enter discussion initiation rating" required />
                            <span asp-validation-for="InitiateDiscussion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TechnicalCapability" class="control-label">Technical Capability</label>
                            <input asp-for="TechnicalCapability" class="form-control" placeholder="Enter technical capability rating" required />
                            <span asp-validation-for="TechnicalCapability" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <!-- Instructor's Evaluation -->
                <h4 class="text-secondary mt-4">Instructor's Evaluation</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TeachingPersonality" class="control-label"></label>
                            <input asp-for="TeachingPersonality" class="form-control" placeholder="Describe personality" required />
                            <span asp-validation-for="TeachingPersonality" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="EstablishRapport" class="control-label"></label>
                            <input asp-for="EstablishRapport" class="form-control" placeholder="Describe rapport" required />
                            <span asp-validation-for="EstablishRapport" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Module Content -->
                <h4 class="text-secondary mt-4">Module Evaluation</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ContentQuality" class="control-label">Content Quality</label>
                            <input asp-for="ContentQuality" class="form-control" placeholder="Describe quality" required />
                            <span asp-validation-for="ContentQuality" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FlowOfTopic" class="control-label">Flow of Topic</label>
                            <input asp-for="FlowOfTopic" class="form-control" placeholder="Describe flow" required />
                            <span asp-validation-for="FlowOfTopic" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ContentOrganization" class="control-label">Content Organization</label>
                            <input asp-for="ContentOrganization" class="form-control" placeholder="Describe organization" required />
                            <span asp-validation-for="ContentOrganization" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ObjectiveStated" class="control-label">Objective Clearly Stated</label>
                            <input asp-for="ObjectiveStated" class="form-control" placeholder="State objective" required />
                            <span asp-validation-for="ObjectiveStated" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RelevanceOfTopic" class="control-label">Relevance of the Topic</label>
                            <input asp-for="RelevanceOfTopic" class="form-control" placeholder="Describe relevance" required />
                            <span asp-validation-for="RelevanceOfTopic" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PracticeApplication" class="control-label">Practice Application</label>
                            <input asp-for="PracticeApplication" class="form-control" placeholder="Describe practice application" required />
                            <span asp-validation-for="PracticeApplication" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LearningActivities" class="control-label">Learning Activities</label>
                            <input asp-for="LearningActivities" class="form-control" placeholder="Describe activities" required />
                            <span asp-validation-for="LearningActivities" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="VisualAids" class="control-label">Visual Aids (Module Presentation)</label>
                            <input asp-for="VisualAids" class="form-control" placeholder="Describe visual aids" required />
                            <span asp-validation-for="VisualAids" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <h4 class="text-secondary mt-4">Mastery of the Subject Matter</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="PresentKnowledge" class="control-label">Ability to Present Knowledge</label>
                            <input asp-for="PresentKnowledge" class="form-control" required />
                            <span asp-validation-for="PresentKnowledge" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BalancePrinciples" class="control-label">Ability to Balance Principles</label>
                            <input asp-for="BalancePrinciples" class="form-control" required />
                            <span asp-validation-for="BalancePrinciples" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressClarifications" class="control-label">Ability to Address Clarifications</label>
                            <input asp-for="AddressClarifications" class="form-control" required />
                            <span asp-validation-for="AddressClarifications" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <h4 class="text-secondary mt-4">Trainor-related Characteristics</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        
                        <div class="form-group">
                            <label asp-for="TeachingPersonality" class="control-label">Teaching Personality</label>
                            <input asp-for="TeachingPersonality" class="form-control" required />
                            <span asp-validation-for="TeachingPersonality" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Preparedness" class="control-label">Preparedness of the SME</label>
                            <input asp-for="Preparedness" class="form-control" required />
                            <span asp-validation-for="Preparedness" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EstablishRapport" class="control-label">Ability to Establish Rapport</label>
                            <input asp-for="EstablishRapport" class="form-control" required />
                            <span asp-validation-for="EstablishRapport" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RespectForParticipants" class="control-label">Genuine Respect for Participants</label>
                            <input asp-for="RespectForParticipants" class="form-control" required />
                            <span asp-validation-for="RespectForParticipants" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VoicePersonality" class="control-label">Voice Personality</label>
                            <input asp-for="VoicePersonality" class="form-control" required />
                            <span asp-validation-for="VoicePersonality" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TimeManagement" class="control-label">Time Management</label>
                            <input asp-for="TimeManagement" class="form-control" required />
                            <span asp-validation-for="TimeManagement" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Suggestions -->
                <h4 class="text-secondary mt-4">What is the best thing you can say about the speaker?</h4>
                <hr />
                <div class="form-group">
                    <textarea asp-for="SuggestionsForImprovement" class="form-control" rows="4" placeholder="Enter suggestions" required></textarea>
                    <span asp-validation-for="SuggestionsForImprovement" class="text-danger"></span>
                </div>



                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Evaluation</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
