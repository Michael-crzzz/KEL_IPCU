@model IPCU.Models.TrainingEvaluation

@{
    ViewData["Title"] = "Delete Training Evaluation";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Delete Training Evaluation</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-danger text-center">
                <strong>Warning!</strong> Are you sure you want to delete this training evaluation? This action cannot be undone.
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4 class="text-primary">Evaluation Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Venue:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Venue)</dd>

                        <dt class="col-sm-4">Date of Training:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfTraining)</dd>

                        <dt class="col-sm-4">Training Methodology:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TrainingMethodology)</dd>

                        <dt class="col-sm-4">Professional Category:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProfessionalCategory)</dd>

                        <dt class="col-sm-4">Total Participants (Male):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalParticipantsMale)</dd>

                        <dt class="col-sm-4">Total Participants (Female):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalParticipantsFemale)</dd>

                        <dt class="col-sm-4">Post Test Evaluation Grade:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PostTestEvaluationGrade)</dd>
                    </dl>

                    <h4 class="text-primary mt-4">Training Evaluation Criteria</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Flow Followed:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FlowFollowed)</dd>

                        <dt class="col-sm-4">Rules Established:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RulesEstablished)</dd>

                        <dt class="col-sm-4">Initiate Discussion:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.InitiateDiscussion)</dd>

                        <dt class="col-sm-4">Technical Capability:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TechnicalCapability)</dd>

                        <dt class="col-sm-4">Content Organization:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContentOrganization)</dd>

                        <dt class="col-sm-4">Objective Stated:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ObjectiveStated)</dd>

                        <dt class="col-sm-4">Content Quality:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContentQuality)</dd>

                        <dt class="col-sm-4">Flow of Topic:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FlowOfTopic)</dd>

                        <dt class="col-sm-4">Relevance of Topic:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RelevanceOfTopic)</dd>

                        <dt class="col-sm-4">Practice Application:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PracticeApplication)</dd>

                        <dt class="col-sm-4">Learning Activities:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LearningActivities)</dd>

                        <dt class="col-sm-4">Visual Aids:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VisualAids)</dd>

                        <dt class="col-sm-4">Present Knowledge:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PresentKnowledge)</dd>

                        <dt class="col-sm-4">Balance of Principles:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.BalancePrinciples)</dd>

                        <dt class="col-sm-4">Address Clarifications:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AddressClarifications)</dd>

                        <dt class="col-sm-4">Preparedness:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Preparedness)</dd>

                        <dt class="col-sm-4">Teaching Personality:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TeachingPersonality)</dd>

                        <dt class="col-sm-4">Establish Rapport:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EstablishRapport)</dd>

                        <dt class="col-sm-4">Respect for Participants:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RespectForParticipants)</dd>

                        <dt class="col-sm-4">Voice Personality:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.VoicePersonality)</dd>

                        <dt class="col-sm-4">Time Management:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TimeManagement)</dd>

                        <dt class="col-sm-4">Suggestions for Improvement:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SuggestionsForImprovement)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
