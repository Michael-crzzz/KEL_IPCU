@model RegisterViewModel

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap');

    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: url('/images/hospital-bg.jpeg') no-repeat center center fixed;
        background-size: cover;
    }

    .blue-overlay {
        position: absolute; /* NOT fixed anymore */
        top: 100;
        left: 10px;
        right: 10px;
        width: auto;
        height: 100%;
        background-color: rgba(var(--bs-primary-rgb), 0.3); /* Bootstrap primary color with 30% opacity */
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px); /* Safari support */
        z-index: 1;
        border-radius: 20px; /* Optional */
    }


    .register-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1rem;
        padding: 1.5rem;
        width: 100%;
        max-width: 960px;
        max-height: calc(110vh - 100px); /* account for navbar + top padding */
        overflow-y: auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        animation: fadeInUp 0.6s ease;
        /* Centering logic */
        margin: 20px auto; /* Top margin pushes it below nav */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-control {
        border-radius: 0.75rem;
    }

    .form-label i {
        margin-right: 0.5rem;
    }

    .btn-success {
        border-radius: 0.75rem;
    }

    .logo {
        width: 65px;
    }

    .text-fade {
        opacity: 0.8;
        font-size: 0.95rem;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 576px) {
        .register-card {
            padding: 1.5rem;
        }
    }
</style>

<div class="blue-overlay">
    <div class="register-card">
        <div class="text-center mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" class="logo mb-2" alt="Hospital Logo">
            <h4 class="text-primary fw-bold mb-1">IPCU SYSTEM</h4>
            <p class="text-muted text-fade">Create your account</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Register" method="post" novalidate>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold"><i class="fa fa-id-badge"></i> Employee ID</label>
                    <input asp-for="EmployeeID" class="form-control shadow-sm" placeholder="Enter Employee ID" />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold"><i class="fa fa-user"></i> First Name</label>
                    <input asp-for="FirstName" class="form-control shadow-sm" placeholder="Enter First Name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold"><i class="fa fa-user"></i> Last Name</label>
                    <input asp-for="LastName" class="form-control shadow-sm" placeholder="Enter Last Name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold"><i class="fa fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control shadow-sm" placeholder="Enter Email" />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Password</label>
                    <input asp-for="Password" type="password" class="form-control shadow-sm" placeholder="Enter Password" id="Password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control shadow-sm" placeholder="Confirm Password" id="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    <div id="passwordMatchMessage" class="small mt-1"></div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success w-100 py-2 fw-semibold shadow">Register</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p class="text-fade">
                Already have an account?
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none fw-semibold text-primary">Sign in</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const password = document.getElementById('Password');
        const confirmPassword = document.getElementById('ConfirmPassword');
        const message = document.getElementById('passwordMatchMessage');

        function checkPasswords() {
            if (confirmPassword.value === '') {
                message.innerHTML = '';
                return;
            }

            if (password.value === confirmPassword.value) {
                message.innerHTML = '<span class="text-success"><i class="fa fa-check-circle"></i> Passwords match</span>';
            } else {
                message.innerHTML = '<span class="text-danger"><i class="fa fa-times-circle"></i> Passwords do not match</span>';
            }
        }

        password.addEventListener('input', checkPasswords);
        confirmPassword.addEventListener('input', checkPasswords);
    </script>
}
