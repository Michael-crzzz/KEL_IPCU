@model RegisterViewModel

<!-- Bootstrap & Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh; margin-top: 60px;">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded-4">
            <!-- Hospital Logo or Name -->
            <div class="text-center mt-4">
                <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" alt="Hospital Logo" width="80">
                <h4 class="mt-2 text-primary fw-bold">IPCU SYSTEM</h4>
            </div>
       
            <!-- OR use this for classic Bootstrap-style -->
            @* Shows only model-level (not per-field) validation errors *@
            <partial name="_ValidationScriptsPartial" />
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <div class="card-body p-4">
                <h5 class="text-center text-secondary">Create a new account</h5>
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-id-badge"></i> Employee ID</label>
                        <input asp-for="EmployeeID" class="form-control shadow-sm rounded-3" placeholder="Enter Employee ID" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-user"></i> First Name</label>
                        <input asp-for="FirstName" class="form-control shadow-sm rounded-3" placeholder="Enter First Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-user"></i> Last Name</label>
                        <input asp-for="LastName" class="form-control shadow-sm rounded-3" placeholder="Enter Last Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-envelope"></i> Email</label>
                        <input asp-for="Email" class="form-control shadow-sm rounded-3" placeholder="Enter Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Password</label>
                        <input asp-for="Password" type="password" class="form-control shadow-sm rounded-3" placeholder="Enter Password" id="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control shadow-sm rounded-3" placeholder="Confirm Password" id="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <div id="passwordMatchMessage" class="mt-1"></div>
                    </div>

                    <button type="submit" class="btn btn-success w-100 py-2 fw-semibold shadow-sm">Register</button>
                </form>
            </div>
        </div>

        <!-- Footer with subtle branding -->
        <div class="text-center mt-3 text-secondary small">
            &copy; 2025 Hospital Management System. All Rights Reserved.
        </div>

        <div class="text-center mt-2">
            <p>Already have an account? <a href="@Url.Action("Login", "Account")" class="text-decoration-none text-primary fw-bold">Sign in</a></p>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const password = document.getElementById('Password');
        const confirmPassword = document.getElementById('ConfirmPassword');
        const message = document.getElementById('passwordMatchMessage');

        function checkPasswords() {
            if (confirmPassword.value === '') {
                message.innerHTML = '';
                return;
            }

            if (password.value === confirmPassword.value) {
                message.innerHTML = '<span class="text-success"><i class="fa fa-check-circle"></i> Passwords match</span>';
            } else {
                message.innerHTML = '<span class="text-danger"><i class="fa fa-times-circle"></i> Passwords do not match</span>';
            }
        }

        password.addEventListener('input', checkPasswords);
        confirmPassword.addEventListener('input', checkPasswords);
    </script>
}
