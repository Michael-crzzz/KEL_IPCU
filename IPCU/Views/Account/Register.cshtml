@model RegisterViewModel

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap');

    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-image: url('/images/hospital-bg.jpeg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        min-width: 90vw;
        position: relative; /* Important for absolute children */
    }

    /* Blue overlay to cover entire viewport */
    .blue-overlay {
        position: absolute; /* NOT fixed anymore */
        top: 100;
        left: 10px;
        right: 10px;
        width: auto;
        height: 100%;
        background-color: rgba(var(--bs-primary-rgb), 0.3); /* Bootstrap primary color with 30% opacity */
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px); /* Safari support */
        z-index: 1;
        border-radius: 20px; /* Optional */
    }

    /* Caption Section */
    .caption-section {
        color: white;
        padding: 2rem;
    }

        .caption-section h1 {
            font-size: 3.5rem;
            font-weight: 800;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.6);
        }

        .caption-section p {
            font-size: 1.5rem;
            font-weight: 400;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

    /* Register Card */
    .register-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(5px);
        border-radius: 0px;
        padding: 2rem;
        max-width: 430px; /* Fixed width for the form */
        width: 100%;
        max-height: 500px; /* Prevent the card from becoming too tall */
        overflow-y: auto; /* Allows scrolling within the card if necessary */
        z-index: 2;
        box-sizing: border-box; /* Ensure padding is included in the width */
    }

    /* Form Styling */
    form {
        max-height: 100%;
        overflow-y: auto; /* Enable vertical scrolling within the form if needed */
    }

    button {
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #28a745; /* Adjust hover effect */
        }

    /* Media Queries for smaller screens */
    @@media (max-width: 768px) {
        .caption-section h1

    {
        font-size: 2.5rem;
    }

    .caption-section p {
        font-size: 1.2rem;
    }

    .register-card {
        padding: 1.5rem;
    }

    }
</style>

<div class="container-fluid blue-overlay d-flex align-items-stretch justify-content-between" >
    <!-- Left Caption -->
    <div class="col-md-6 caption-section d-flex flex-column justify-content-center">
        <h1 class="display-4 fw-bold">Join the IPCU System</h1>
        <p class="lead">Creating a safer and smarter patient care environment together.</p>

    </div>

    <!-- Right Register Form -->
    <div class="col-md-5 d-flex align-items-center">
        <div class="register-card shadow-lg w-100">
            <div class="text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" alt="Hospital Logo" width="70">
                <h4 class="mt-2 text-primary fw-bold">IPCU SYSTEM</h4>
                <p class="text-secondary">Create your account</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fa fa-id-badge"></i> Employee ID</label>
                    <input asp-for="EmployeeID" class="form-control shadow-sm rounded-3" placeholder="Enter Employee ID" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fa fa-user"></i> First Name</label>
                    <input asp-for="FirstName" class="form-control shadow-sm rounded-3" placeholder="Enter First Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fa fa-user"></i> Last Name</label>
                    <input asp-for="LastName" class="form-control shadow-sm rounded-3" placeholder="Enter Last Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fa fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control shadow-sm rounded-3" placeholder="Enter Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Password</label>
                    <input asp-for="Password" type="password" class="form-control shadow-sm rounded-3" placeholder="Enter Password" id="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control shadow-sm rounded-3" placeholder="Confirm Password" id="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div id="passwordMatchMessage" class="mt-1"></div>
                </div>

                <button type="submit" class="btn btn-success w-100 py-2 fw-semibold shadow-sm">Register</button>
            </form>

            <div class="text-center mt-3">
                <p>
                    Already have an account?
                    <a href="@Url.Action("Login", "Account")" class="text-primary fw-bold text-decoration-none">Sign in</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const password = document.getElementById('Password');
        const confirmPassword = document.getElementById('ConfirmPassword');
        const message = document.getElementById('passwordMatchMessage');

        function checkPasswords() {
            if (confirmPassword.value === '') {
                message.innerHTML = '';
                return;
            }

            if (password.value === confirmPassword.value) {
                message.innerHTML = '<span class="text-success"><i class="fa fa-check-circle"></i> Passwords match</span>';
            } else {
                message.innerHTML = '<span class="text-danger"><i class="fa fa-times-circle"></i> Passwords do not match</span>';
            }
        }

        password.addEventListener('input', checkPasswords);
        confirmPassword.addEventListener('input', checkPasswords);
    </script>
}
