@model LoginViewModel

<h2>Login</h2>
<form asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <input type="checkbox" asp-for="RememberMe" /> Remember me
    </div>
    <button type="submit">Login</button>
</form>
