@model LoginViewModel

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-4" style="margin-top: -100px;">
        <!-- Increased upward movement x2 -->
        <div class="card shadow-lg border-0 rounded-4 p-4">
            <!-- Logo & Title -->
            <div class="text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" alt="Hospital Logo" width="70">
                <h4 class="mt-2 text-primary fw-bold">IPCU SYSTEM</h4>
                <p class="text-secondary">Sign in to continue</p>
            </div>

            <!-- Login Form -->
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                        <label class="form-check-label">Remember me</label>
                    </div>
                    <a href="#" class="text-decoration-none text-danger">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3 fw-semibold">Login</button>
            </form>

            <!-- Signup Link -->
            <div class="text-center mt-3">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-primary fw-bold">Sign up</a></p>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-3 text-secondary small">
            &copy; 2025 IPCU System. All Rights Reserved.
        </div>
    </div>
</div>
