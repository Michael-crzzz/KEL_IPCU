@model LoginViewModel

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap');

    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        transition: background-color 0.3s ease;
    }

    body {
        background-image: url('/images/hospital-bg.jpeg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        min-width: 90vw;
        position: relative;
        transition: background 0.5s ease;
    }

    /* Blue blur overlay with transition */
    .blue-overlay {
        position: absolute;
        top: 100;
        left: 10px;
        right: 10px;
        width: auto;
        height: 100%;
        background-color: rgba(var(--bs-primary-rgb), 0.3);
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
        z-index: 1;
        border-radius: 20px;
        transition: all 0.5s ease;
    }

    .content {
        position: relative;
        z-index: 2;
        transition: all 0.5s ease;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(5px);
        border-radius: 20px;
        transition: all 0.3s ease;
    }

    .caption-section {
        color: white;
        padding: 2rem;
        transition: all 0.5s ease;
    }

        .caption-section h1 {
            font-size: 3.5rem;
            font-weight: 800;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.6);
            margin-bottom: 1rem;
            transition: all 0.5s ease;
        }

        .caption-section p {
            font-size: 1.5rem;
            font-weight: 400;
            opacity: 0.9;
            margin-bottom: 2rem;
            transition: all 0.5s ease;
        }

    .take-test-btn {
        margin-top: 0;
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        transition: background 0.3s ease, color 0.3s ease;
    }

    /* Keyframe for typewriter effect */
    #typewriter::after {
        content: "|";
        animation: blink 1s infinite;
        color: white;
    }

    @@keyframes blink {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0;
    }

    }

    /* Button hover effects */
    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
            background-color: #0d6efd;
        }

    /* Form input transitions */
    .form-control {
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 5px rgba(13, 110, 253, 0.5);
        }
</style>

<!-- Blue overlay -->
<div class="blue-overlay"></div>

<!-- Content -->
<div class="container-fluid d-flex align-items-center justify-content-between content" style="min-height: 100vh;">
    <!-- Left Caption -->
    <div class="col-md-6 caption-section">
        <h1 class="display-4 fw-bold" id="typewriter">Welcome to IPCU System</h1>
        <p class="lead">Your trusted partner in patient care and medical excellence.</p>
    </div>

    <!-- Right Login Card -->
    <div class="col-md-4 me-3">
        <div class="card shadow-lg border-0 p-4 login-card">
            <div class="text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" alt="Hospital Logo" width="70">
                <h4 class="mt-2 text-primary fw-bold">IPCU SYSTEM</h4>
                <p class="text-secondary">Sign in to continue</p>
            </div>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                        <label class="form-check-label">Remember me</label>
                    </div>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none text-danger">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3 fw-semibold">Login</button>
            </form>

            <div class="text-center mt-3">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-primary fw-bold">Sign up</a></p>
            </div>
        </div>

        <div class="text-center mt-3 text-white small">
            &copy; 2025 IPCU System. All Rights Reserved.
        </div>
    </div>
</div>

<script>
    const text = "Welcome to IPCU System";
    const speed = 100; // typing speed (ms per character)
    const eraseSpeed = 50; // erase speed
    const delay = 1500; // delay before erasing
    const element = document.getElementById("typewriter");

    let index = 0;
    let isDeleting = false;

    function typeEffect() {
        if (isDeleting) {
            element.textContent = text.substring(0, index--);
            if (index < 0) {
                isDeleting = false;
                setTimeout(typeEffect, speed);
            } else {
                setTimeout(typeEffect, eraseSpeed);
            }
        } else {
            element.textContent = text.substring(0, index++);
            if (index > text.length) {
                isDeleting = true;
                setTimeout(typeEffect, delay);
            } else {
                setTimeout(typeEffect, speed);
            }
        }
    }

    document.addEventListener("DOMContentLoaded", typeEffect);
</script>
