@model LoginViewModel

<!-- Bootstrap & Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container d-flex justify-content-center align-items-center style="min-height: 90vh; margin-top: 60px;">
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4">
            <!-- Hospital Logo or Name -->
            <div class="text-center mt-4">
                <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" alt="Hospital Logo" width="80">
                <h4 class="mt-2 text-primary fw-bold">IPCU SYSTEM</h4>
            </div>

            <div class="card-body p-4">
                <h5 class="text-center text-secondary">Sign in to continue</h5>
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-envelope"></i> Email</label>
                        <input asp-for="Email" class="form-control shadow-sm rounded-3" placeholder="Enter your email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fa fa-lock"></i> Password</label>
                        <input asp-for="Password" type="password" class="form-control shadow-sm rounded-3" placeholder="Enter your password" />
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">Login</button>
                </form>

                <div class="text-center mt-3">
                    <a href="#" class="text-decoration-none text-danger"><i class="fa fa-lock"></i> Forgot Password?</a>
                </div>
            </div>
        </div>

        <!-- Footer with subtle branding -->
        <div class="text-center mt-3 text-secondary small">
            &copy; 2025 Hospital Management System. All Rights Reserved.
        </div>

        <div class="text-center mt-2">
            <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-decoration-none text-primary fw-bold">Sign up</a></p>
        </div>
    </div>
</div>
