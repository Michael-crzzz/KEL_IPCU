@model LoginViewModel

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap');
    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-image: url('/images/hospital-bg.jpeg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        min-width: 90vw;
        position: relative; /* Important for absolute children */
    }

    /* Blue blur overlay - Fully responsive */
    .blue-overlay {
        position: absolute; /* NOT fixed anymore */
        top: 100;
        left: 10px;
        right: 10px;
        width: auto;
        height: 100%;
        background-color: rgba(var(--bs-primary-rgb), 0.3); /* Bootstrap primary color with 30% opacity */
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px); /* Safari support */
        z-index: 1;
        border-radius: 20px; /* Optional */
    }

    .content {
        position: relative;
        z-index: 2; /* Content above the blue blur */
    }

    .login-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(5px);
        border-radius: 20px;
    }

    .caption-section {
        color: white;
        padding: 2rem;
    }

        .caption-section h1 {
            font-size: 3.5rem; /* Bigger and cleaner */
            font-weight: 800;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.6); /* Subtle text glow */
            margin-bottom: 1rem;
        }

        .caption-section p {
            font-size: 1.5rem;
            font-weight: 400;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

    .take-test-btn {
        margin-top: 0; /* remove top margin */
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        transition: background 0.3s ease, color 0.3s ease;
    }
</style>

<!-- Blue overlay -->
<div class="blue-overlay"></div>

<!-- Content -->
<div class="container-fluid d-flex align-items-center justify-content-between content" style="min-height: 100vh;">
    <!-- Left Caption -->
    <div class="col-md-6 caption-section">
        <h1 class="display-4 fw-bold">Welcome to IPCU System</h1>
        <p class="lead">Your trusted partner in patient care and medical excellence.</p>

        <div class="d-flex flex-wrap gap-3 mt-4">
            <a class="btn btn-outline-light btn-lg flex-fill" asp-controller="Test" asp-action="TakeTest">
                <i class="fa fa-file-alt"></i> Take a Test
            </a>
            <button type="button" class="btn btn-primary btn-lg flex-fill" onclick="window.location.href='https://localhost:7179/ICRAs/create'">
                <i class="fa fa-plus"></i> Go to ICRAs
            </button>
        </div>
    </div>

    <!-- Right Login Card -->
    <div class="col-md-4 me-3">
        <div class="card shadow-lg border-0 p-4 login-card">
            <div class="text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2913/2913977.png" alt="Hospital Logo" width="70">
                <h4 class="mt-2 text-primary fw-bold">IPCU SYSTEM</h4>
                <p class="text-secondary">Sign in to continue</p>
            </div>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input">
                        <label class="form-check-label">Remember me</label>
                    </div>
                    <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none text-danger">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3 fw-semibold">Login</button>
            </form>

            <div class="text-center mt-3">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-primary fw-bold">Sign up</a></p>
            </div>
        </div>

        <div class="text-center mt-3 text-white small">
            &copy; 2025 IPCU System. All Rights Reserved.
        </div>
    </div>
</div>
