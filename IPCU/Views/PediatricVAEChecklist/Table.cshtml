@model IEnumerable<IPCU.Models.PediatricVAEChecklist>

@{
    ViewData["Title"] = "Pediatric VAE Checklist Submissions";
}

<h2>Pediatric VAE Checklist Submissions</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Patient Name</th>
            <th>Hospital Number</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Unit/Ward Area</th>
            <th>Date of Admission</th>
            <th>Date of Event</th>
            <th>Disposition</th>
            <th>MDRO</th>
            <th>PedVAE</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            var index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@($"{item.Fname} {item.Mname} {item.Lname}")</td>
                    <td>@item.HospitalNumber</td>
                    <td>@item.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.UnitWardArea</td>
                    <td>@item.DateOfAdmission?.ToString("yyyy-MM-dd")</td>
                    <td>@item.DateOfEvent?.ToString("yyyy-MM-dd")</td>
                    <td>@item.Disposition</td>
                    <td>@(item.MDRO == "Yes" ? "✅" : "❌")</td>
                    <td>@(item.TypeClass?.Contains("PedVAE") == true ? "✅" : "❌")</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> View
                        </a>

                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="13" class="text-center text-muted">No records found.</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">
    <i class="fas fa-plus"></i> Add New Checklist
</a>