@model IPCU.Models.AddVitalSignViewModel
@{
    ViewData["Title"] = "Add Vital Sign";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Add Vital Sign</h3>
                    <div>
                        <span class="badge bg-primary">@Model.AdmLocation</span>
                        <span class="badge bg-light text-dark ms-2">Room: @Model.RoomID</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-user-circle me-2"></i>
                        <strong>Patient:</strong> @Model.PatientName
                    </div>

                    <form asp-action="AddVitalSign" method="post">
                        <input type="hidden" asp-for="IdNum" />
                        <input type="hidden" asp-for="HospNum" />
                        <input type="hidden" asp-for="PatientName" />
                        <input type="hidden" asp-for="AdmLocation" />
                        <input type="hidden" asp-for="RoomID" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="VitalSign" class="form-label">Vital Sign Type</label>
                                    <select asp-for="VitalSign" class="form-select" required>
                                        <option value="">-- Select Type --</option>
                                        @foreach (var option in Model.VitalSignOptions)
                                        {
                                            <option value="@option">@option</option>
                                        }
                                    </select>
                                    <span asp-validation-for="VitalSign" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="VitalSignValue" class="form-label">Value</label>
                                    <input asp-for="VitalSignValue" class="form-control" required />
                                    <span asp-validation-for="VitalSignValue" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="VitalSignDate" class="form-label">Date/Time</label>
                                    <input asp-for="VitalSignDate" class="form-control" type="datetime-local" required />
                                    <span asp-validation-for="VitalSignDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Save Vital Sign
                            </button>
                            <a asp-action="VitalSigns" asp-route-id="@Model.IdNum" class="btn btn-secondary ms-2">
                                <i class="fas fa-times-circle me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // If you want to add a custom field for "Other Symptoms"
            $('#VitalSign').change(function() {
                if ($(this).val() === 'Other Symptoms') {
                    // You could potentially show an additional field here
                    // Or change the label for the value field
                    $('label[for="VitalSignValue"]').text('Symptoms Description');
                } else {
                    $('label[for="VitalSignValue"]').text('Value');
                }
            });
        });
    </script>
}