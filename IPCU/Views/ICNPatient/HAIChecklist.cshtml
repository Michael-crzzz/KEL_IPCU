@model IPCU.Models.HAIChecklistViewModel
@{
    ViewData["Title"] = "HAI Checklist";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-white p-2 me-3">
                        <i class="fas fa-clipboard-check text-primary fa-lg"></i>
                    </div>
                    <h4 class="mb-0">HAI Checklist</h4>
                </div>
                <div class="d-flex gap-2">
                    <div class="badge bg-danger px-3 py-2">
                        <i class="fas fa-exclamation-circle me-1"></i>
                        HAI Status: Active
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <!-- Patient Info Card -->
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-4">
                                <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                    <i class="fas fa-user text-primary"></i>
                                </div>
                                <h5 class="mb-0">Patient Information</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block">Hospital Number</small>
                                    <strong>@Model.Patient.HospNum</strong>
                                </div>
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block">Patient Name</small>
                                    <strong>@Model.Patient.PatientName</strong>
                                </div>
                                <div class="list-group-item border-0 px-0">
                                    <small class="text-muted d-block">Location</small>
                                    <strong>@Model.Patient.AdmLocation - @Model.Patient.RoomID</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Device Checklists Section -->
                <div class="col-md-8">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <ul class="nav nav-tabs" id="checklistTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="infections-tab" data-bs-toggle="tab" data-bs-target="#infections" type="button" role="tab" aria-controls="infections" aria-selected="true">
                                        <i class="fas fa-file-medical me-2"></i>Infection Checklists
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="devices-tab" data-bs-toggle="tab" data-bs-target="#devices" type="button" role="tab" aria-controls="devices" aria-selected="false">
                                        <i class="fas fa-plug me-2"></i>Device Management
                                    </button>
                                </li>
                            </ul>
                            
                            <div class="tab-content pt-4" id="checklistTabsContent">
                                <!-- Infection Checklists Tab -->
                                <div class="tab-pane fade show active" id="infections" role="tabpanel" aria-labelledby="infections-tab">
                                    <div class="row g-3">
                                        <!-- Always displayed infection forms -->
                                        <!-- SST Infection - Always visible -->
                                        <div class="col-md-6">
                                            <a href="@Url.Action("Index", "InfectionChecklist", new { hospNum = Model.Patient.HospNum })"
                                               class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                <div class="card-body">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                            <i class="fas fa-hand-paper text-primary"></i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-1 text-primary">SST</h6>
                                                            <small class="text-muted">SKIN AND SOFT TISSUE INFECTION</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>

                                        <!-- Conditional display based on device presence -->
                                        <!-- Central Line forms - Show only if patient has a central line -->
                                        @if (Model.DeviceFlags.HasCentralLine)
                                        {
                                            <!-- CVS Infection -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "CardiovascularSystemInfection", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-heartbeat text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">CVS</h6>
                                                                <small class="text-muted">CARDIOVASCULAR SYSTEM INFECTION</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>

                                            <!-- LCBI -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "LaboratoryConfirmedBloodstreamInfection", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-vial text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">LCBI</h6>
                                                                <small class="text-muted">LABORATORY CONFIRMED BLOODSTREAM INFECTION</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }

                                        <!-- Indwelling Urinary Catheter forms - Show only if patient has an IUC -->
                                        @if (Model.DeviceFlags.HasIndwellingUrinaryCatheter)
                                        {
                                            <!-- UTI -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "UTIForm", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-kidneys text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">UTI</h6>
                                                                <small class="text-muted">URINARY TRACT INFECTION</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>

                                            <!-- USI -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "Usis", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-toilet text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">USI</h6>
                                                                <small class="text-muted">URINARY SYSTEM INFECTION</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }

                                        <!-- Mechanical Ventilator forms - Show only if patient has a mechanical ventilator -->
                                        @if (Model.DeviceFlags.HasMechanicalVentilator)
                                        {
                                            <!-- VAE -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "VentilatorEventChecklist", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-wind text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">VAE</h6>
                                                                <small class="text-muted">VENTILATOR-ASSOCIATED EVENT</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>

                                            <!-- Pediatric VAE -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "PediatricVAEChecklist", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-lungs text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">PVAE</h6>
                                                                <small class="text-muted">PEDIATRIC VENTILATOR-ASSOCIATED EVENT</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>

                                            <!-- Pneumonia -->
                                            <div class="col-md-6">
                                                <a href="@Url.Action("Index", "Pneumonias", new { hospNum = Model.Patient.HospNum })"
                                                   class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                                <i class="fas fa-lungs-virus text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-1 text-primary">PNEU</h6>
                                                                <small class="text-muted">PNEUMONIA</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        }

                                        <!-- GII - Always visible -->
                                        <div class="col-md-6">
                                            <a href="@Url.Action("Index", "GIInfectionChecklist", new { hospNum = Model.Patient.HospNum })"
                                               class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                <div class="card-body">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                            <i class="fas fa-intestine text-primary"></i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-1 text-primary">GII</h6>
                                                            <small class="text-muted">GASTROINTESTINAL INFECTION</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>

                                        <!-- SSI - Always visible -->
                                        <div class="col-md-6">
                                            <a href="@Url.Action("Index", "SurgicalSiteInfection", new { hospNum = Model.Patient.HospNum })"
                                               class="card h-100 border-0 shadow-sm hover-shadow text-decoration-none">
                                                <div class="card-body">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                            <i class="fas fa-procedures text-primary"></i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-1 text-primary">SSI</h6>
                                                            <small class="text-muted">SURGICAL SITE INFECTION</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>

                                        <!-- No Devices Connected Message -->
                                        @if (!Model.DeviceFlags.HasCentralLine && !Model.DeviceFlags.HasIndwellingUrinaryCatheter && !Model.DeviceFlags.HasMechanicalVentilator)
                                        {
                                            <div class="col-12">
                                                <div class="alert alert-info">
                                                    <i class="fas fa-info-circle me-2"></i>
                                                    <span>No device-specific infection forms available. Some infection forms are hidden because the patient doesn't have connected devices like Central Lines, Indwelling Urinary Catheters, or Mechanical Ventilators.</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                
                                <!-- Device Management Tab -->
                                <div class="tab-pane fade" id="devices" role="tabpanel" aria-labelledby="devices-tab">
                                    @* <div class="row g-3"> *@
                                    <!-- Central Line Device Management -->
                                    @if (Model.DeviceFlags.HasCentralLine)
                                    {
                                        <div class="col-12">
                                            <div class="card border-0 shadow-sm mb-4">
                                                <div class="card-header bg-gradient-info text-white">
                                                    <div class="d-flex align-items-center">
                                                        <div class="rounded-circle bg-white p-2 me-3">
                                                            <i class="fas fa-syringe text-info"></i>
                                                        </div>
                                                        <h5 class="mb-0">Central Line Management</h5>
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row g-3">
                                                        <!-- Central Line Insertion -->
                                                        <div class="col-md-6">
                                                            <div class="card h-100 border-0 shadow-sm">
                                                                <div class="card-body">
                                                                    <h6 class="text-info mb-3">
                                                                        <i class="fas fa-plus-circle me-2"></i>Central Line Insertion
                                                                    </h6>

                                                                    @if (Model.CentralLineInsertionForm != null)
                                                                    {
                                                                        <div class="mb-3">
                                                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                                                <span class="badge bg-success">Insertion Form Completed</span>
                                                                                <small class="text-muted">ID: @Model.CentralLineInsertionForm.Id</small>
                                                                            </div>
                                                                            <div class="row mb-2">
                                                                                <div class="col-6">
                                                                                    <small class="text-muted d-block">Procedure Operator</small>
                                                                                    <strong>@Model.CentralLineInsertionForm.ProcedureOperator</strong>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <small class="text-muted d-block">Catheter Type</small>
                                                                                    <strong>@Model.CentralLineInsertionForm.CatheterType</strong>
                                                                                </div>
                                                                            </div>
                                                                            <div class="row mb-2">
                                                                                <div class="col-6">
                                                                                    <small class="text-muted d-block">Procedure Location</small>
                                                                                    <strong>@Model.CentralLineInsertionForm.ProcedureLocation</strong>
                                                                                </div>
                                                                                <div class="col-6">
                                                                                    <small class="text-muted d-block">Number of Lumens</small>
                                                                                    <strong>@Model.CentralLineInsertionForm.NumberofLumens</strong>
                                                                                </div>
                                                                            </div>
                                                                            <div class="mt-3">
                                                                                <a href="@Url.Action("Edit", "Insertions", new { id = Model.CentralLineInsertionForm.Id })" class="btn btn-sm btn-outline-primary me-2">
                                                                                    <i class="fas fa-edit me-1"></i>Edit
                                                                                </a>
                                                                                <a href="@Url.Action("Details", "Insertions", new { id = Model.CentralLineInsertionForm.Id })" class="btn btn-sm btn-outline-info">
                                                                                    <i class="fas fa-eye me-1"></i>View Details
                                                                                </a>
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="alert alert-warning mb-3">
                                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                                            No insertion form found for this patient.
                                                                        </div>

                                                                        {
                                                                            // Store the patient ID in TempData for the form to use
                                                                            TempData["PatientId"] = Model.Patient.IdNum;
                                                                        }

                                                                        <a href="@Url.Action("Create", "Insertions")" class="btn btn-primary">
                                                                            <i class="fas fa-plus me-2"></i>Create Insertion Form
                                                                        </a>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Central Line Maintenance -->
                                                        <div class="col-md-6">
                                                            <div class="card h-100 border-0 shadow-sm">
                                                                <div class="card-body">
                                                                    <h6 class="text-info mb-3">
                                                                        <i class="fas fa-clipboard-list me-2"></i>Maintenance Checklists
                                                                    </h6>

                                                                    @if (Model.CentralLineMaintenanceChecklists != null && Model.CentralLineMaintenanceChecklists.Any())
                                                                    {
                                                                        <div class="table-responsive">
                                                                            <table class="table table-sm table-hover">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th>Date</th>
                                                                                        <th>By</th>
                                                                                        <th>Rate</th>
                                                                                        <th></th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    @foreach (var checklist in Model.CentralLineMaintenanceChecklists.Take(3))
                                                                                    {
                                                                                        <tr>
                                                                                            <td>@checklist.DateAndTimeOfMonitoring.ToString("MM/dd/yyyy")</td>
                                                                                            <td>@(string.IsNullOrEmpty(checklist.AssessedBy) ? "-" : checklist.AssessedBy)</td>
                                                                                            <td>
                                                                                                @if (checklist.ComplianceRate >= 90)
                                                                                                {
                                                                                                    <span class="badge bg-success">@checklist.ComplianceRate%</span>
                                                                                                }
                                                                                                else if (checklist.ComplianceRate >= 75)
                                                                                                {
                                                                                                    <span class="badge bg-warning">@checklist.ComplianceRate%</span>
                                                                                                }
                                                                                                else
                                                                                                {
                                                                                                    <span class="badge bg-danger">@checklist.ComplianceRate%</span>
                                                                                                }
                                                                                            </td>
                                                                                            <td>
                                                                                                <a href="@Url.Action("Details", "DailyCentralLineMaintenanceChecklists", new { id = checklist.Id })" class="btn btn-sm btn-link">
                                                                                                    <i class="fas fa-eye"></i>
                                                                                                </a>
                                                                                            </td>
                                                                                        </tr>
                                                                                    }
                                                                                </tbody>
                                                                            </table>
                                                                        </div>

                                                                        @if (Model.CentralLineMaintenanceChecklists.Count > 3)
                                                                        {
                                                                            <div class="text-center mt-2">
                                                                                <a href="@Url.Action("PatientChecklists", "DailyCentralLineMaintenanceChecklists", new { patientName = Model.Patient.PatientName })" class="btn btn-sm btn-outline-secondary">
                                                                                    View All (@Model.CentralLineMaintenanceChecklists.Count) Checklists
                                                                                </a>
                                                                            </div>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="alert alert-info mb-3">
                                                                            <i class="fas fa-info-circle me-2"></i>
                                                                            No maintenance checklists found. Regular maintenance checks are required.
                                                                        </div>
                                                                    }

                                                                    @{
                                                                        // Store the patient ID in TempData for the form to use
                                                                        TempData["PatientId"] = Model.Patient.IdNum;
                                                                    }

                                                                    <a href="@Url.Action("Create", "DailyCentralLineMaintenanceChecklists")" class="btn btn-info">
                                                                        <i class="fas fa-plus me-2"></i>New Maintenance Checklist
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                        <!-- Indwelling Urinary Catheter Device Management -->
                                        @if (Model.DeviceFlags.HasIndwellingUrinaryCatheter)
                                        {
                                            <div class="col-12">
                                                <div class="card border-0 shadow-sm mb-4">
                                                    <div class="card-header bg-gradient-success text-black">
                                                        <div class="d-flex align-items-center">
                                                            <div class="rounded-circle bg-black p-2 me-3">
                                                                <i class="fas fa-toilet text-success"></i>
                                                            </div>
                                                            <h5 class="mb-0">Indwelling Urinary Catheter Management</h5>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <!-- IUC Insertion Form -->
                                                        <div class="mb-4">
                                                            <h6 class="text-success mb-3">
                                                                <i class="fas fa-plus-circle me-2"></i>IUC Insertion
                                                            </h6>
                                                            @if (Model.IndwellingUrinaryCatheterInsertion != null)
                                                            {
                                                                <div class="mb-3">
                                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                                        <span class="badge bg-success">Insertion Form Completed</span>
                                                                        <small class="text-muted">ID: @Model.IndwellingUrinaryCatheterInsertion.Id</small>
                                                                    </div>
                                                                    <div class="row mb-2">
                                                                        @* <div class="col-6"> *@
                                                                        @*     <small class="text-muted d-block">Insertion Date</small> *@
                                                                        @*     <strong>@Model.IndwellingUrinaryCatheterInsertion.InitialPlacement.ToString("MM/dd/yyyy")</strong> *@
                                                                        @* </div> *@
                                                                        <div class="col-6">
                                                                            <small class="text-muted d-block">Inserted By</small>
                                                                            <strong>@Model.IndwellingUrinaryCatheterInsertion.ProcedureOperator</strong>
                                                                        </div>
                                                                    </div>
                                                                    <div class="mt-3">
                                                                        <a href="@Url.Action("Edit", "Insertions", new { id = Model.IndwellingUrinaryCatheterInsertion.Id })" class="btn btn-sm btn-outline-primary me-2">
                                                                            <i class="fas fa-edit me-1"></i>Edit
                                                                        </a>
                                                                        <a href="@Url.Action("Details", "Insertions", new { id = Model.IndwellingUrinaryCatheterInsertion.Id })" class="btn btn-sm btn-outline-info">
                                                                            <i class="fas fa-eye me-1"></i>View Details
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="alert alert-warning mb-3">
                                                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                                                    No insertion form found for this patient.
                                                                </div>
                                                                <a href="@Url.Action("Create", "Insertions")" class="btn btn-success">
                                                                    <i class="fas fa-plus me-2"></i>Create Insertion Form
                                                                </a>
                                                            }
                                                        </div>

                                                        <!-- IUC Maintenance Form -->
                                                        <div>
                                                            <h6 class="text-success mb-3">
                                                                <i class="fas fa-clipboard-list me-2"></i>Maintenance Checklists
                                                            </h6>
                                                            @if (Model.IndwellingUrinaryCatheterInsertion != null)
                                                            {
                                                                @if (Model.IndwellingUrinaryCatheterMaintenanceChecklists != null && Model.IndwellingUrinaryCatheterMaintenanceChecklists.Any())
                                                                {
                                                                    <div class="table-responsive">
                                                                        <table class="table table-sm table-hover">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>Date</th>
                                                                                    <th>By</th>
                                                                                    <th>Rate</th>
                                                                                    <th></th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                @foreach (var checklist in Model.IndwellingUrinaryCatheterMaintenanceChecklists.Take(3))
                                                                                {
                                                                                    <tr>
                                                                                        <td>@checklist.DateAndTimeOfMonitoring.ToString("MM/dd/yyyy")</td>
                                                                                        <td>@(string.IsNullOrEmpty(checklist.AssessedBy) ? "-" : checklist.AssessedBy)</td>
                                                                                        <td>
                                                                                            @if (checklist.ComplianceRate >= 90)
                                                                                            {
                                                                                                <span class="badge bg-success">@checklist.ComplianceRate%</span>
                                                                                            }
                                                                                            else if (checklist.ComplianceRate >= 75)
                                                                                            {
                                                                                                <span class="badge bg-warning">@checklist.ComplianceRate%</span>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <span class="badge bg-danger">@checklist.ComplianceRate%</span>
                                                                                            }
                                                                                        </td>
                                                                                        <td>
                                                                                            <a href="@Url.Action("Details", "IndwellingUrinaryCatheterMaintenanceChecklists", new { id = checklist.Id })" class="btn btn-sm btn-link">
                                                                                                <i class="fas fa-eye"></i>
                                                                                            </a>
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
