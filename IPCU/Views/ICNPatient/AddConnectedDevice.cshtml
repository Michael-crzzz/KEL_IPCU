@model IPCU.Models.AddConnectedDeviceViewModel
@{
    ViewData["Title"] = "Add Connected Device";
}

<div class="container-fluid">
    <h2>Add Connected Device</h2>
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.PatientName</h4>
                    <p class="mb-0">
                        <small>
                            <strong>Hospital Number:</strong> @Model.HospNum |
                            <strong>Location:</strong> @Model.AdmLocation |
                            <strong>Room:</strong> @Model.RoomID
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Device Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddConnectedDevice" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdNum" />
                        <input type="hidden" asp-for="HospNum" />
                        <input type="hidden" asp-for="AdmLocation" />
                        <input type="hidden" asp-for="RoomID" />
                        <input type="hidden" asp-for="PatientName" />

                        <div class="mb-3">
                            <label asp-for="DeviceType" class="form-label"></label>
                            <select asp-for="DeviceType" class="form-select" id="deviceTypeSelect">
                                <option value="">-- Select Device Type --</option>
                                <option value="CL">Central Line (CL)</option>
                                <option value="IUC">Indwelling Urinary Catheter (IUC)</option>
                                <option value="MV">Mechanical Ventilator (MV)</option>
                                <option value="NG">Nasogastric Tube (NG)</option>
                                <option value="PICC">Peripherally Inserted Central Catheter (PICC)</option>
                                <option value="ET">Endotracheal Tube (ET)</option>
                                <option value="PEG">Percutaneous Endoscopic Gastrostomy (PEG)</option>
                                <option value="TRACH">Tracheostomy (TRACH)</option>
                            </select>
                            <span asp-validation-for="DeviceType" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="deviceClassDiv" style="display:none;">
                            <label asp-for="DeviceClass" class="form-label"></label>
                            <select asp-for="DeviceClass" class="form-select" id="deviceClassSelect">
                                <!-- Options will be populated by JavaScript -->
                            </select>
                            <span asp-validation-for="DeviceClass" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeviceInsert" class="form-label"></label>
                            <input asp-for="DeviceInsert" class="form-control" type="date" />
                            <span asp-validation-for="DeviceInsert" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeviceRemove" class="form-label"></label>
                            <input asp-for="DeviceRemove" class="form-control" type="date" />
                            <span asp-validation-for="DeviceRemove" class="text-danger"></span>
                            <small class="form-text text-muted">Leave blank if device is still in place</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ConnectedDevices" asp-route-id="@Model.IdNum" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Handle device type changes
            $('#deviceTypeSelect').change(function() {
                var deviceType = $(this).val();
                var deviceClassDiv = $('#deviceClassDiv');
                var deviceClassSelect = $('#deviceClassSelect');

                // Clear previous options
                deviceClassSelect.empty();

                if (deviceType === 'CL') {
                    // Show device class field and populate with CL options
                    deviceClassDiv.show();
                    deviceClassSelect.append('<option value="">-- Select Class --</option>');
                    deviceClassSelect.append('<option value="Non-HD">Non-HD</option>');
                    deviceClassSelect.append('<option value="HD">HD</option>');
                    // Add required attribute
                    deviceClassSelect.prop('required', true);
                }
                else if (deviceType === 'IUC') {
                    // Show device class field and populate with IUC options
                    deviceClassDiv.show();
                    deviceClassSelect.append('<option value="">-- Select Class --</option>');
                    deviceClassSelect.append('<option value="Non-KT">Non-KT</option>');
                    deviceClassSelect.append('<option value="KT">KT</option>');
                    // Add required attribute
                    deviceClassSelect.prop('required', true);
                }
                else {
                    // Hide device class for other device types
                    deviceClassDiv.hide();
                    // Remove required attribute and clear value
                    deviceClassSelect.prop('required', false);
                    deviceClassSelect.val('');
                }
            });

            // Trigger change on page load
            $('#deviceTypeSelect').trigger('change');

            // Form validation
            $('form').submit(function(e) {
                var deviceType = $('#deviceTypeSelect').val();
                var deviceClass = $('#deviceClassSelect').val();

                // Only validate if it's a CL or IUC device
                if ((deviceType === 'CL' || deviceType === 'IUC') && !deviceClass) {
                    e.preventDefault();
                    // Show error message
                    if (!$('#deviceClassError').length) {
                        $('#deviceClassSelect').after('<span id="deviceClassError" class="text-danger">The Device Class field is required for this device type.</span>');
                    }
                    return false;
                } else {
                    $('#deviceClassError').remove();
                }
            });
        });
    </script>
}