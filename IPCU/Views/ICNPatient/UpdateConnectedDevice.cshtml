@model IPCU.Models.UpdateConnectedDeviceViewModel
@{
    ViewData["Title"] = "Update Connected Device";
}

<div class="container-fluid">
    <h2>Update Connected Device</h2>
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.PatientName</h4>
                    <p class="mb-0">
                        <small>
                            <strong>Hospital Number:</strong> @Model.HospNum |
                            <strong>Location:</strong> @Model.AdmLocation |
                            <strong>Room:</strong> @Model.RoomID
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Device Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateConnectedDevice" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="DeviceId" />
                        <input type="hidden" asp-for="IdNum" />
                        <input type="hidden" asp-for="HospNum" />
                        <input type="hidden" asp-for="AdmLocation" />
                        <input type="hidden" asp-for="RoomID" />
                        <input type="hidden" asp-for="PatientName" />

                        <div class="mb-3">
                            <label class="form-label">Device Type</label>
                            <input class="form-control" value="@Model.DeviceType" readonly />
                            <input type="hidden" asp-for="DeviceType" />
                        </div>

                        @if (Model.DeviceType == "CL" || Model.DeviceType == "IUC")
                        {
                            <div class="mb-3" id="deviceClassDiv">
                                <label asp-for="DeviceClass" class="form-label"></label>
                                <select asp-for="DeviceClass" class="form-select" id="deviceClassSelect">
                                    <option value="">-- Select Class --</option>
                                    @if (Model.DeviceType == "CL")
                                    {
                                        <option value="Non-HD">Non-HD</option>
                                        <option value="HD">HD</option>
                                    }
                                    else if (Model.DeviceType == "IUC")
                                    {
                                        <option value="Non-KT">Non-KT</option>
                                        <option value="KT">KT</option>
                                    }
                                </select>
                                <span asp-validation-for="DeviceClass" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="DeviceClass" />
                        }

                        <div class="mb-3">
                            <label class="form-label">Insertion Date</label>
                            <input class="form-control" value="@Model.DeviceInsert.ToString("yyyy-MM-dd")" readonly />
                            <input type="hidden" asp-for="DeviceInsert" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeviceRemove" class="form-label"></label>
                            <input asp-for="DeviceRemove" class="form-control" type="date" />
                            <span asp-validation-for="DeviceRemove" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ConnectedDevices" asp-route-id="@Model.IdNum" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Set the selected value for deviceClassSelect
            var deviceClassValue = '@Model.DeviceClass';
            if (deviceClassValue) {
                $('#deviceClassSelect').val(deviceClassValue);
            }
        });
    </script>
}