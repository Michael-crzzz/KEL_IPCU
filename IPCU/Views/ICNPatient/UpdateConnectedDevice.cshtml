@model IPCU.Models.UpdateConnectedDeviceViewModel

@{
    ViewData["Title"] = "Update Connected Device";
}

<div class="container">
    <h2>Update Connected Device</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Patient Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Patient Name:</dt>
                        <dd class="col-sm-8">@Model.PatientName</dd>

                        <dt class="col-sm-4">ID Number:</dt>
                        <dd class="col-sm-8">@Model.IdNum</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.AdmLocation</dd>

                        <dt class="col-sm-4">Room ID:</dt>
                        <dd class="col-sm-8">@Model.RoomID</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Device Information</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateConnectedDevice" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="DeviceId" />
                <input type="hidden" asp-for="HospNum" />
                <input type="hidden" asp-for="IdNum" />
                <input type="hidden" asp-for="AdmLocation" />
                <input type="hidden" asp-for="RoomID" />
                <input type="hidden" asp-for="PatientName" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DeviceType" class="control-label">Device Type</label>
                            <input asp-for="DeviceType" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DeviceInsert" class="control-label">Insert Date</label>
                            <input asp-for="DeviceInsert" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DeviceRemove" class="control-label">Remove Date</label>
                            <input asp-for="DeviceRemove" class="form-control" type="date" />
                            <span asp-validation-for="DeviceRemove" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Update Device</button>
                    <a asp-action="ConnectedDevices" asp-route-id="@Model.IdNum" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}