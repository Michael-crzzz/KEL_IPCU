@model IPCU.Models.PatientForm

@{
    ViewData["Title"] = "Register Patient";
}

<!-- Bootstrap & FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="fw-bold"><i class="fa fa-user-plus"></i> Register Patient</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <h5 class="text-primary fw-bold">Patient Information</h5>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-user"></i> First Name</label>
                            <input asp-for="FirstName" class="form-control shadow-sm rounded-3" placeholder="Enter First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-user"></i> Middle Name</label>
                            <input asp-for="MiddleName" class="form-control shadow-sm rounded-3" placeholder="Enter Middle Name" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-user"></i> Last Name</label>
                            <input asp-for="LastName" class="form-control shadow-sm rounded-3" placeholder="Enter Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-signature"></i> Suffix</label>
                            <input asp-for="Suffix" class="form-control shadow-sm rounded-3" placeholder="e.g., Jr, Sr, III" />
                            <span asp-validation-for="Suffix" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-virus"></i> Disease</label>
                            <input asp-for="Disease" class="form-control shadow-sm rounded-3" placeholder="Enter Disease" />
                            <span asp-validation-for="Disease" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-hospital"></i> Status</label>
                            <select asp-for="Status" class="form-select shadow-sm rounded-3">
                                <option value="Active">Active</option>
                                <option value="Discharged">Discharged</option>
                                <option value="Under Treatment">Under Treatment</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <h5 class="text-primary fw-bold">Room & Assigned Nurse</h5>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-door-open"></i> Room</label>
                            <input asp-for="Room" class="form-control shadow-sm rounded-3" placeholder="Enter Room Number" />
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-building"></i> Building</label>
                            <input asp-for="Building" class="form-control shadow-sm rounded-3" placeholder="Enter Building Name" />
                            <span asp-validation-for="Building" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-user-nurse"></i> Nurse First Name</label>
                            <input asp-for="NurseFirstName" class="form-control shadow-sm rounded-3" placeholder="Enter Nurse First Name" />
                            <span asp-validation-for="NurseFirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-user-nurse"></i> Nurse Middle Name</label>
                            <input asp-for="NurseMiddleName" class="form-control shadow-sm rounded-3" placeholder="Enter Nurse Middle Name" />
                            <span asp-validation-for="NurseMiddleName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-user-nurse"></i> Nurse Last Name</label>
                            <input asp-for="NurseLastName" class="form-control shadow-sm rounded-3" placeholder="Enter Nurse Last Name" />
                            <span asp-validation-for="NurseLastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-hashtag"></i> Age</label>
                            <input asp-for="Age" class="form-control shadow-sm rounded-3" placeholder="Enter Age" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"><i class="fa fa-venus-mars"></i> Sex</label>
                            <select asp-for="Sex" class="form-select shadow-sm rounded-3">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Sex" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit & Back Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold shadow-sm"><i class="fa fa-save"></i> Register</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 py-2 fw-semibold shadow-sm"><i class="fa fa-arrow-left"></i> Back</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-3 text-secondary small">
        &copy; 2025 Hospital Management System. All Rights Reserved.
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
