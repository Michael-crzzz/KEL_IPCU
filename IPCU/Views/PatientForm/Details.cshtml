@model IPCU.Models.PatientForm

@{
    ViewData["Title"] = "Patient Details";
}

<!-- Bootstrap & FontAwesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">
            <i class="fas fa-user-circle"></i> Patient Details
        </h2>
        <hr />

        <div class="row">
            <!-- Patient Details -->
            <div class="col-md-6">
                <h5 class="text-secondary">Patient Details</h5>
                <div class="mb-3">
                    <label class="form-label fw-bold">First Name:</label>
                    <input type="text" class="form-control" value="@Model.FirstName" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Middle Name:</label>
                    <input type="text" class="form-control" value="@Model.MiddleName" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Last Name:</label>
                    <input type="text" class="form-control" value="@Model.LastName" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Suffix:</label>
                    <input type="text" class="form-control" value="@Model.Suffix" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Age:</label>
                    <input type="text" class="form-control" value="@Model.Age" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Sex:</label>
                    <input type="text" class="form-control" value="@Model.Sex" readonly>
                </div>
            </div>

            <!-- Medical & Room Details -->
            <div class="col-md-6">
                <h5 class="text-secondary">Medical & Room Details</h5>
                <div class="mb-3">
                    <label class="form-label fw-bold">Disease:</label>
                    <input type="text" class="form-control" value="@Model.Disease" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Status:</label>
                    <input type="text" class="form-control" value="@Model.Status" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Room:</label>
                    <input type="text" class="form-control" value="@Model.Room" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Building:</label>
                    <input type="text" class="form-control" value="@Model.Building" readonly>
                </div>
            </div>
        </div>

        <hr />

        <!-- Assigned Nurse -->
        <h5 class="text-secondary">Assigned Nurse</h5>
        <div class="row">
            <div class="col-md-3">
                <label class="form-label fw-bold">First Name:</label>
                <input type="text" class="form-control" value="@Model.NurseFirstName" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Middle Name:</label>
                <input type="text" class="form-control" value="@Model.NurseMiddleName" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Last Name:</label>
                <input type="text" class="form-control" value="@Model.NurseLastName" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Suffix:</label>
                <input type="text" class="form-control" value="@Model.NurseSuffix" readonly>
            </div>
        </div>

        <!-- Buttons -->
        <div class="text-center mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
