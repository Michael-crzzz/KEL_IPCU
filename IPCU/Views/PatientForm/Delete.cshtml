@model IPCU.Models.PatientForm

@{
    ViewData["Title"] = "Delete Patient Record";
}

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger">
            <i class="fa fa-trash-alt"></i> Delete Patient Record
        </h2>
        <hr>
        <h4 class="text-center text-secondary">Are you sure you want to delete this record?</h4>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- Patient Details -->
                <div class="col-md-6">
                    <h5 class="text-secondary">Patient Details</h5>
                    <div class="mb-3">
                        <label class="form-label fw-bold">First Name</label>
                        <input class="form-control" value="@Model.FirstName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Middle Name</label>
                        <input class="form-control" value="@Model.MiddleName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Last Name</label>
                        <input class="form-control" value="@Model.LastName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Suffix</label>
                        <input class="form-control" value="@Model.Suffix" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Age</label>
                        <input class="form-control" value="@Model.Age" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Sex</label>
                        <input class="form-control" value="@Model.Sex" readonly>
                    </div>
                </div>

                <!-- Medical & Room Details -->
                <div class="col-md-6">
                    <h5 class="text-secondary">Medical & Room Details</h5>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Disease</label>
                        <input class="form-control" value="@Model.Disease" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Status</label>
                        <input class="form-control" value="@Model.Status" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Room</label>
                        <input class="form-control" value="@Model.Room" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Building</label>
                        <input class="form-control" value="@Model.Building" readonly>
                    </div>
                </div>
            </div>

            <!-- Assigned Nurse -->
            <h5 class="text-secondary mt-4">Assigned Nurse</h5>
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label fw-bold">First Name</label>
                    <input class="form-control" value="@Model.NurseFirstName" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Middle Name</label>
                    <input class="form-control" value="@Model.NurseMiddleName" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Last Name</label>
                    <input class="form-control" value="@Model.NurseLastName" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Suffix</label>
                    <input class="form-control" value="@Model.NurseSuffix" readonly>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-lg btn-danger">
                    <i class="fa fa-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-lg btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>
