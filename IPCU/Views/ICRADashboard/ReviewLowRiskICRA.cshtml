@model IPCU.Models.ICRA
@{
    ViewData["Title"] = "Review Low Risk ICRA";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2><i class="fas fa-clipboard-check me-2"></i>Review Low Risk ICRA</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> You are reviewing a <strong>Low Risk ICRA (Class @Model.PreventiveMeasures)</strong>. 
                        Low risk ICRAs only require ICP acknowledgment to complete the process.
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Project Details</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Project Reference:</th>
                                    <td>@Model.ProjectReferenceNumber</td>
                                </tr>
                                <tr>
                                    <th>Project Name:</th>
                                    <td>@Model.ProjectNameAndDescription</td>
                                </tr>
                                <tr>
                                    <th>Location:</th>
                                    <td>@Model.SpecificSiteOfActivity</td>
                                </tr>
                                <tr>
                                    <th>Risk Class:</th>
                                    <td><span class="badge bg-info">@Model.PreventiveMeasures</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Contractor Information</h5>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Contractor Rep:</th>
                                    <td>@Model.ContractorRepresentativeName</td>
                                </tr>
                                <tr>
                                    <th>Phone Number:</th>
                                    <td>@Model.TelephoneOrMobileNumber</td>
                                </tr>
                                <tr>
                                    <th>Start Date:</th>
                                    <td>@(Model.ProjectStartDate?.ToString("MM/dd/yyyy") ?? "Not specified")</td>
                                </tr>
                                <tr>
                                    <th>Duration:</th>
                                    <td>@Model.EstimatedDuration</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h5>Risk Assessment & Preventive Measures</h5>
                            <div class="card">
                                <div class="card-body">
                                    <p><strong>Construction Type:</strong> @Model.ConstructionType</p>
                                    <p><strong>Patient Risk Group:</strong> @Model.PatientRiskGroup</p>
                                    <p><strong>Preventive Measures:</strong> @Model.PreventiveMeasures</p>
                                    <p><strong>Scope of Work:</strong> @Model.ScopeOfWork</p>
                                    <p><strong>Additional Comments:</strong> @(string.IsNullOrEmpty(Model.AdditionalComments) ? "None" : Model.AdditionalComments)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="ReviewLowRiskICRA" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4 border-top pt-4">
                            <div class="form-group required">
                                <label asp-for="ICPSign" class="control-label">Infection Control Professional Signature</label>
                                <input asp-for="ICPSign" class="form-control" required />
                                <span asp-validation-for="ICPSign" class="text-danger"></span>
                                <small class="form-text text-muted">Enter your name to acknowledge this Low Risk ICRA.</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="AdminICN" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-signature me-1"></i> Sign and Acknowledge
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}