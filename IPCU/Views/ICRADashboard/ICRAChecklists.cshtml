@model IEnumerable<IPCU.Models.TCSkillsChecklist>
@{
    ViewData["Title"] = "ICRA Checklists";
    var icra = ViewBag.ICRA;
    var hasChecklists = ViewBag.HasChecklists;
}

<div class="container-fluid mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.HasPostConstruction)
    {
        <a asp-action="ExportPostConstruction" asp-route-id="@ViewBag.PostConstructionId" class="btn btn-success">
            <i class="fas fa-file-excel me-1"></i> Export Post-Construction
        </a>
    }

    <div class="container-fluid mt-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3>
                        <i class="fas fa-clipboard-list me-2"></i>Terminal Cleaning Skills Checklists for @icra.ProjectNameAndDescription
                    </h3>
                    <div>
                        <a asp-action="ExportICRA" asp-route-id="@icra.Id" class="btn btn-success me-2">
                            <i class="fas fa-file-excel me-1"></i> Export ICRA
                        </a>
                        <a asp-action="ExportCombinedReport" asp-route-id="@icra.Id" class="btn btn-success">
                            <i class="fas fa-file-archive me-1"></i> Export Full Report
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h2><i class="fas fa-clipboard-check me-2"></i>ICRA Checklists</h2>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <div class="row">
                    <div class="col-md-6">
                        <h3>ICRA Details</h3>
                        <table class="table table-sm">
                            <tr>
                                <th>Project Reference:</th>
                                <td>@icra.ProjectReferenceNumber</td>
                            </tr>
                            <tr>
                                <th>Project Name:</th>
                                <td>@icra.ProjectNameAndDescription</td>
                            </tr>
                            <tr>
                                <th>Location:</th>
                                <td>@icra.SpecificSiteOfActivity</td>
                            </tr>
                            <tr>
                                <th>Risk Class:</th>
                                <td>
                                    @if (icra.PreventiveMeasures.Contains("3") ||
                                    icra.PreventiveMeasures.Contains("4") ||
                                    icra.PreventiveMeasures.Contains("5") ||
                                    icra.PreventiveMeasures.ToLower().Contains("class iii") ||
                                    icra.PreventiveMeasures.ToLower().Contains("class iv") ||
                                    icra.PreventiveMeasures.ToLower().Contains("class v"))
                                    {
                                        <span class="badge bg-danger">@icra.PreventiveMeasures</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@icra.PreventiveMeasures</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h3>Actions</h3>
                        <div class="d-flex gap-2 mb-3">
                            @if (ViewBag.HasPostConstruction)
                            {
                                <button class="btn btn-primary disabled" title="Post-construction phase completed. New checklists cannot be added.">
                                    <i class="fas fa-plus-circle me-1"></i> New Terminal Cleaning Checklist
                                </button>
                                <a asp-controller="PostConstructions" asp-action="Edit" asp-route-id="@ViewBag.PostConstructionId" class="btn btn-success">
                                    <i class="fas fa-edit me-1"></i> Edit Post-Construction Form
                                </a>
                            }
                            else if (hasChecklists)
                            {
                                <a asp-controller="TCSkillsChecklists" asp-action="Create" asp-route-icraId="@icra.Id" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-1"></i> New Terminal Cleaning Checklist
                                </a>
                                <a asp-controller="PostConstructions" asp-action="Create" asp-route-icraId="@icra.Id" class="btn btn-success">
                                    <i class="fas fa-building me-1"></i> Create Post-Construction Form
                                </a>
                            }
                            else
                            {
                                <a asp-controller="TCSkillsChecklists" asp-action="Create" asp-route-icraId="@icra.Id" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-1"></i> New Terminal Cleaning Checklist
                                </a>
                                <button class="btn btn-success disabled" title="Create at least one checklist to enable this option">
                                    <i class="fas fa-building me-1"></i> Create Post-Construction Form
                                </button>
                            }

                            <a asp-controller="ICRADashboard" asp-action="AdminICN" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="mb-3">Terminal Cleaning Checklists</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Observer Name</th>
                            <th>Date</th>
                            <th>Area</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ObserverName</td>
                                    <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                    <td>@item.Area</td>
                                    <td>
                                        <a asp-controller="TCSkillsChecklists" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle me-1"></i> Details
                                        </a>
                                        <a asp-controller="TCSkillsChecklists" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No checklists have been created for this ICRA yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>